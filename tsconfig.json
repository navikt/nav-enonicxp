{
    "compilerOptions": {
        "target": "es2019",
        "module": "ESNext",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noEmit": true,
        "baseUrl": "./src/main/resources",
        "paths": {
            "/assets/html-entities/2.3.3/lib": ["../../../node_modules/html-entities"],
            "/assets/striptags/3.1.1/src/striptags": ["../../../node_modules/striptags"],
            "/assets/dayjs/1.11.9/dayjs.min.js": ["../../../node_modules/dayjs"],
            "/assets/dayjs/1.11.9/plugin/utc.js": ["../../../node_modules/dayjs/plugin/utc"]
        }
    },
    "include": ["src/main/resources/**/*.ts", "node_modules/enonic-types/*.d.ts"],
    "exclude": [
        "node_modules/enonic-types/index.d.ts",
        "node_modules/enonic-types/content.d.ts",
        "node_modules/enonic-types/portal.d.ts",
        "node_modules/enonic-types/node.d.ts"
    ]
}
