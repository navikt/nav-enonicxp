<macro>
    <display-name>Sett inn blå info.boks</display-name>
    <description>Sett inn blå info.boks i brødteksten</description>
    <form>
        <input name="body" type="HtmlArea">
            <label>Innhold i boksen</label>
            <occurrences minimum="1" maximum="1"/></input>
        <input name="infoBoks" type="TextLine">
            <label>(Deprecated - Bruk "Innhold" feltet)</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <regexp>^$</regexp>
            </config>
        </input>
    </form>
</macro>
