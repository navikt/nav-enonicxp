<macro>
    <display-name>Saksbehandlingstid</display-name>
    <description>Sett inn en saksbehandlingstid i teksten</description>
    <form>
        <input name="key" type="CustomSelector">
            <label>Velg saksbehandlingstid</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <service>caseProcessingTimes</service>
                <param value="valueType">caseTime</param>
                <param value="withDescription">true</param>
            </config>
        </input>
        <!-- Dummy value to prevent graphql-errors for undefined field -->
        <input name="value" type="RadioButton">
            <label>-</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
    </form>
</macro>
