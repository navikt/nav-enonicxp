<macro>
    <display-name>Blå knapp</display-name>
    <description>Sett inn blå knapp i brødteksten</description>
    <form>
        <input name="url" type="TextLine">
            <label>Url</label>
        </input>
        <input name="text" type="TextLine">
            <label>Tekst</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="content" type="ContentSelector">
            <label>Innhold</label>
        </input>
    </form>
</macro>
