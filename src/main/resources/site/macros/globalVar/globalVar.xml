<macro>
    <display-name>Gjenbrukbar verdi</display-name>
    <description>Sett inn en gjenbrukbar verdi</description>
    <form>
        <input name="target" type="ContentSelector">
            <label>Velg verdisett</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowContentType>no.nav.navno:global-vars-multiple</allowContentType>
                <allowPath>${site}/*</allowPath>
            </config>
        </input>
        <input name="value" type="CustomSelector">
            <label>Velg verdi</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <service>globalVars</service>
            </config>
        </input>
    </form>
</macro>
