<macro>
    <display-name>Lenke med chevron (ekstern)</display-name>
    <form>
        <input name="url" type="TextLine">
            <label>URL</label>
            <help-text>Url til ekstern side</help-text>
            <default>https://</default>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <regexp>^https?:\/\/.*</regexp>
            </config>
        </input>
        <input name="text" type="TextLine">
            <label>Lenketekst</label>
            <default>Tekst</default>
            <occurrences minimum="1" maximum="1"/>
        </input>
    </form>
</macro>
