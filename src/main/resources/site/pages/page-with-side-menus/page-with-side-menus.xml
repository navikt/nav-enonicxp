<page>
    <display-name>Innholdsside med meny</display-name>
    <description>Sidetype med meny</description>
    <form>
        <field-set>
            <label>Meny</label>
            <items>
                <input type="CheckBox" name="showInternalNav">
                    <label>Vis intern-navigasjon</label>
                    <default>checked</default>
                </input>
                <input type="TextLine" name="leftMenuHeader">
                    <label>Tittel</label>
                    <default>Innhold</default>
                </input>
                <mixin name="page-navigation-menu"/>
            </items>
        </field-set>
        <field-set>
            <label>Andre innstillinger</label>
            <items>
                <input name="showProductName" type="CheckBox">
                    <label>Vis produktnavnet i 'Det finnes ogs√• informasjon om...'</label>
                    <help-text>Hvis du krysser vekk, blir ordet 'dette' vist istedet for produktnavnet.</help-text>
                    <default>checked</default>
                </input>
            </items>
        </field-set>
    </form>
    <regions>
        <region name="topPageContent"/>
        <region name="pageContent"/>
        <region name="bottomRow"/>
    </regions>
</page>
