<content-type>
    <display-name>nav.snarvei</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Snarvei til nyhet, artikkel, eller faktaark">
            <label>Snarvei til nyhet, artikkel, eller faktaark</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel (vises kun i arkivet)</label>
                    <custom-text>contentdata/heading</custom-text>
                    <help-text>Tittel vises kun for redaktÃ¸rer, i arkivet i Enonic CMS admin. Her kan du f.eks notere hvilken innholdstype snarveien peker til, slik at det blir enklere Ã¥ skille snarveiene fra hverandre.</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="link" type="ContentSelector">
                    <label>Innhold</label>
                    <custom-text>contentdata/link</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Kort_om</allow-content-type>
                        <allow-content-type>no.nav.navno:nav.nyhet</allow-content-type>
                        <allow-content-type>no.nav.navno:Artikkel_Brukerportal</allow-content-type>
                        <allow-content-type>no.nav.navno:nav.sidebeskrivelse</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
