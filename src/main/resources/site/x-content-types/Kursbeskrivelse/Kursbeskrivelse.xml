<content-type>
    <display-name>Kursbeskrivelse</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Tilbakemelding">
            <label>Tilbakemelding</label>
            <items>
                <input name="kursnummer" type="TextLine">
                    <label>Kursnummer</label>
                    <custom-text>contentdata/kursnummer</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="kursnavn" type="TextLine">
                    <label>Kursnavn</label>
                    <custom-text>contentdata/kursnavn</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="maalgruppe" type="HtmlArea">
                    <label>Målgruppe</label>
                    <custom-text>contentdata/maalgruppe</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="kursmaal" type="HtmlArea">
                    <label>Kursmål</label>
                    <custom-text>contentdata/kursmaal</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="innhold" type="HtmlArea">
                    <label>Innhold</label>
                    <custom-text>contentdata/innhold</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="ansvarlig" type="TextLine">
                    <label>Ansvarlig</label>
                    <custom-text>contentdata/ansvarlig</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="kurstidspunkt" type="TextLine">
                    <label>Kurstidspunkt</label>
                    <custom-text>contentdata/kurstidspunkt</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="kurssted" type="TextLine">
                    <label>Kurssted</label>
                    <custom-text>contentdata/kurssted</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="kurstema" type="ContentSelector">
                    <label>Kurstema</label>
                    <custom-text>contentdata/kurstema</custom-text>
                    <occurrences maximum="0" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Kursemne</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <item-set name="eposter">
            <label>E-post</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="epost" type="TextLine">
                    <label>E-post</label>
                    <custom-text>contentdata/epost</custom-text>
                    <help-text>Epostadresse til ansvarlig for kurset</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
        <field-set name="Språk">
            <label>Språk</label>
            <items>
                <input name="spraak" type="ComboBox">
                    <label>Språk</label>
                    <custom-text>contentdata/spraak</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="bokmaal">Bokmål</option>
                        <option value="nynorsk">Nynorsk</option>
                        <option value="samisk">Samisk</option>
                        <option value="engelsk">Engelsk</option>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
