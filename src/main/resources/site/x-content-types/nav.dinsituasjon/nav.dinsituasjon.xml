<content-type>
    <display-name>nav.dinsituasjon</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Dinsituasjon">
            <label>Dinsituasjon</label>
            <items>
                <input name="tittel" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/tittel</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="ingress" type="TextLine">
                    <label>Ingress</label>
                    <custom-text>contentdata/ingress</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <item-set name="lenkeboks">
            <label>Lenkeboks</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="tittel" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/tittel</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="ingress" type="TextLine">
                    <label>Ingress</label>
                    <custom-text>contentdata/ingress</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="lenke" type="ContentSelector">
                    <label>Lenke</label>
                    <custom-text>contentdata/lenke</custom-text>
                    <occurrences maximum="0" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                        <allow-content-type>no.nav.navno:Artikkel_Brukerportal</allow-content-type>
                        <allow-content-type>no.nav.navno:Kort_om</allow-content-type>
                    </config>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
