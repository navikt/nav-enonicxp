<content-type>
    <display-name>Rettskildene_oversikt</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Oversikt">
            <label>Oversikt</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Title</label>
                    <custom-text>contentdata/title</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="content" type="HtmlArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/content</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <item-set name="oversiktdel">
            <label>Oversiktsdel</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="overskrift" type="TextLine">
                    <label>Del-overskrift</label>
                    <custom-text>overskrift</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="relatert_innhold" type="ContentSelector">
                    <label>Relatert innhold</label>
                    <custom-text>oversiktdel</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Rettskildene_rundskriv</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_forskrift</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_vedlegg</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_legemiddelliste</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_artikkel</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_eu_artikkel</allow-content-type>
                    </config>
                </input>
            </items>
        </item-set>
        <item-set name="relatedcontents">
            <label>Annet</label>
            <occurrences maximum="1" minimum="0"/>
            <items>
                <item-set name="relatedcontent">
                    <label>Annet</label>
                    <occurrences maximum="0" minimum="0"/>
                    <items>
                        <input name="blocktitle" type="TextLine">
                            <label>Overskrift</label>
                            <custom-text>blocktitle</custom-text>
                            <occurrences maximum="1" minimum="0"/>
                        </input>
                        <input name="annet_innhold" type="ContentSelector">
                            <label>Lenker</label>
                            <custom-text>contents</custom-text>
                            <occurrences maximum="0" minimum="0"/>
                            <config>
                                <allow-content-type>no.nav.navno:Rettskildene_paragraf</allow-content-type>
                                <allow-content-type>no.nav.navno:Rettskildene_rundskriv</allow-content-type>
                                <allow-content-type>no.nav.navno:Rettskildene_forskrift</allow-content-type>
                                <allow-content-type>no.nav.navno:Rettskildene_vedlegg</allow-content-type>
                                <allow-content-type>no.nav.navno:Rettskildene_legemiddelliste</allow-content-type>
                            </config>
                        </input>
                        <input name="listtext" type="TextLine">
                            <label>"se mer" lenke tekst</label>
                            <custom-text>listtext</custom-text>
                            <occurrences maximum="1" minimum="0"/>
                        </input>
                        <input name="list" type="ContentSelector">
                            <label>"se mer" lenke</label>
                            <custom-text>list</custom-text>
                            <occurrences maximum="0" minimum="0"/>
                            <config>
                                <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                            </config>
                        </input>
                    </items>
                </item-set>
            </items>
        </item-set>
    </form>
</content-type>
