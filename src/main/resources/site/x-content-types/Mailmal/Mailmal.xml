<content-type>
    <display-name>Mailmal</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Title">
            <label>Title</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Heading</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="from" type="TextLine">
                    <label>From</label>
                    <custom-text>contentdata/from</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="to" type="TextLine">
                    <label>To</label>
                    <custom-text>contentdata/to</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="nokler">
            <label>Nokkel</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="nokkel" type="TextLine">
                    <label>Nokkel</label>
                    <custom-text>nokkel</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
