<content-type>
    <display-name>Kvalsys_t_prosess</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Oppdaterer du på vegne av noene andre?">
            <label>Oppdaterer du på vegne av noene andre?</label>
            <items>
                <input name="updated-by" type="TextLine">
                    <label>Oppdatert på vegne av</label>
                    <custom-text>contentdata/updated-by</custom-text>
                    <help-text>La feltet være tomt med mindre du redigerer innholdet på vegne av noen andre.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Metadata for prosess">
            <label>Metadata for prosess</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Prosesstittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="name" type="TextLine">
                    <label>Faglig ansvarlig</label>
                    <custom-text>contentdata/name</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="text" type="HtmlArea">
                    <label>Brødtekst</label>
                    <custom-text>contentdata/text</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="Prosesskart">
            <label>Prosesskart</label>
            <items>
                <input name="map" type="ContentSelector">
                    <label>Prosesskart</label>
                    <custom-text>contentdata/map</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Fil</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <item-set name="changelog">
            <label>Endringslogg</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="date" type="Date">
                    <label>Dato</label>
                    <custom-text>date</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="log" type="TextArea">
                    <label>Endring</label>
                    <custom-text>log</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
