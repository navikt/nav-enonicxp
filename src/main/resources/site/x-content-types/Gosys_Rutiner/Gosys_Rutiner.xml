<content-type>
    <display-name>Gosys_Rutiner</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Innledning">
            <label>Innledning</label>
            <items>
                <input name="tittel" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/tittel</custom-text>
                    <help-text>Skriv inn tittelen her</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="ingress" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/ingress</custom-text>
                    <help-text>Skriv inn ingressen her</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <item-set name="rutiner">
            <label>Rutiner</label>
            <occurrences maximum="1" minimum="0"/>
            <items>
                <item-set name="rutine">
                    <label>Rutiner</label>
                    <occurrences maximum="0" minimum="0"/>
                    <items>
                        <input name="undertittel" type="TextLine">
                            <label>Undertittel</label>
                            <custom-text>undertittel</custom-text>
                            <help-text>Skriv inn undertittelen her</help-text>
                            <occurrences maximum="1" minimum="1"/>
                        </input>
                        <input name="text" type="HtmlArea">
                            <label>Brødtekst</label>
                            <custom-text>text</custom-text>
                            <help-text>Skriv inn brødteksten her</help-text>
                            <occurrences maximum="1" minimum="1"/>
                        </input>
                    </items>
                </item-set>
            </items>
        </item-set>
    </form>
</content-type>
