<content-type>
    <display-name>TeksterForSBL</display-name>
    <description>Innholdstekster for nye sider i SBL Arbeid</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Tittel">
            <label>Tittel</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/title</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="locale" type="ComboBox">
                    <label>Locale</label>
                    <custom-text>contentdata/locale</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="nb_NO">Norsk (Bokmål)</option>
                        <option value="nn_NO">Norsk (Nynorsk)</option>
                        <option value="en_US">Engelsk</option>
                    </config>
                </input>
                <input name="variant" type="TextLine">
                    <label>Variant</label>
                    <custom-text>contentdata/variant</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="text">
            <label>Tekst</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="code" type="TextLine">
                    <label>Nøkkel</label>
                    <custom-text>code</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="text" type="TextArea">
                    <label>Tekst</label>
                    <custom-text>text</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
