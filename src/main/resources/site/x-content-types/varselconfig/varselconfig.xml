<content-type>
    <display-name>varselconfig</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="VarselConfig">
            <label>VarselConfig</label>
            <items>
                <input name="varselType" type="TextLine">
                    <label>varselType</label>
                    <custom-text>contentdata/varselType</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="stylingklasse" type="TextLine">
                    <label>stylingklasse</label>
                    <custom-text>contentdata/stylingklasse</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="ikontekst" type="TextLine">
                    <label>ikontekst</label>
                    <custom-text>contentdata/ikontekst</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="lenketekst" type="TextLine">
                    <label>lenketekst</label>
                    <custom-text>contentdata/lenketekst</custom-text>
                    <help-text>Hvis ingen tekst er satt, og varslet har en url vil teksten "Les mer" vises</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
