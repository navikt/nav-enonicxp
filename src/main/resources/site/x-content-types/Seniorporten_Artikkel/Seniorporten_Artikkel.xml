<content-type>
    <display-name>Seniorporten_Artikkel</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Artikkel">
            <label>Artikkel</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="preface" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/preface</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="teaser_image" type="ImageSelector">
                    <label>Ingressbilde</label>
                    <custom-text>contentdata/teaser_image</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="show_published" type="CheckBox">
                    <label>Vis publisert dato</label>
                    <custom-text>contentdata/show_published</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="show_updated" type="CheckBox">
                    <label>Vis oppdatert dato</label>
                    <custom-text>contentdata/show_updated</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="article_body" type="HtmlArea">
                    <label>Brødtekst</label>
                    <custom-text>contentdata/article_body</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="images">
            <label>Bilder</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="image" type="ImageSelector">
                    <label>Bilde</label>
                    <custom-text>image</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="image_description" type="TextArea">
                    <label>Bildebeskrivelse</label>
                    <custom-text>image_description</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
        <item-set name="attachments">
            <label>Vedlegg</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="file" type="ContentSelector">
                    <label>Legg til fil</label>
                    <custom-text>file</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
        <item-set name="internal_links">
            <label>Interne lenker</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="internal_link" type="ContentSelector">
                    <label>Legg til intern lenke</label>
                    <custom-text>internal_link</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Seniorporten_Artikkel</allow-content-type>
                    </config>
                </input>
            </items>
        </item-set>
        <item-set name="external_links">
            <label>Eksterne lenker</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="external_link" type="ContentSelector">
                    <label>Legg til ekstern lenke</label>
                    <custom-text>external_link</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                    </config>
                </input>
            </items>
        </item-set>
        <field-set name="Kampanjefelt">
            <label>Kampanjefelt</label>
            <items>
                <input name="banner" type="ContentSelector">
                    <label>Legg til kampanjefelt</label>
                    <custom-text>contentdata/banner</custom-text>
                    <help-text>Man kan bare ha ett kampanjefelt per artikkel. Det går an å legge til flere, men bare ett vil vises.</help-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Seniorporten_Banner</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
