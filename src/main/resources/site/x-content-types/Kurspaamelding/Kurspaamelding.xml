<content-type>
    <display-name>Kurspaamelding</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Tilbakemelding">
            <label>Tilbakemelding</label>
            <items>
                <input name="navn" type="TextLine">
                    <label>Fullt navn</label>
                    <custom-text>contentdata/navn</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="telefonnummer" type="TextLine">
                    <label>Telefonnummer</label>
                    <custom-text>contentdata/telefonnummer</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="epost" type="TextLine">
                    <label>E-post</label>
                    <custom-text>contentdata/epost</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="postadresse" type="TextArea">
                    <label>Postadresse</label>
                    <custom-text>contentdata/postadresse</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="melding" type="TextArea">
                    <label>Melding</label>
                    <custom-text>contentdata/melding</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="kurs" type="TextLine">
                    <label>Kursnavn og kursnummer</label>
                    <custom-text>contentdata/kurs</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="kursId" type="ContentSelector">
                    <label>Kurs</label>
                    <custom-text>contentdata/kursId</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Kursbeskrivelse</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
