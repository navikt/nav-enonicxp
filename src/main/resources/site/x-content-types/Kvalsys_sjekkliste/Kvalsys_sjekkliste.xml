<content-type>
    <display-name>Kvalsys_sjekkliste</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Oppdaterer du på vegne av noene andre?">
            <label>Oppdaterer du på vegne av noene andre?</label>
            <items>
                <input name="updated-by" type="TextLine">
                    <label>Oppdatert på vegne av</label>
                    <custom-text>contentdata/updated-by</custom-text>
                    <help-text>La feltet være tomt med mindre du redigerer innholdet på vegne av noen andre.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Om sjekklisten">
            <label>Om sjekklisten</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="preface" type="TextArea">
                    <label>Innledning</label>
                    <custom-text>contentdata/preface</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="outcome" type="TextArea">
                    <label>Utfall</label>
                    <custom-text>contentdata/outcome</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="listitem">
            <label>Sjekkliste</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="text" type="HtmlArea">
                    <label>Sjekklistepunkt</label>
                    <custom-text>text</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </item-set>
        <field-set name="Referanser">
            <label>Referanser</label>
            <items>
                <input name="resources" type="ContentSelector">
                    <label>Retningslinjer og eksterne lenker</label>
                    <custom-text>contentdata/resources</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                        <allow-content-type>no.nav.navno:Kvalsys_retningslinje</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
