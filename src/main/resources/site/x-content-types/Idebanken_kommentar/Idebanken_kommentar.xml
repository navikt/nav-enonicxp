<content-type>
    <display-name>Idebanken_kommentar</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Comment">
            <label>Comment</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Artikkelens tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="name" type="TextLine">
                    <label>Name</label>
                    <custom-text>contentdata/name</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="email" type="TextLine">
                    <label>E-mail</label>
                    <custom-text>contentdata/email</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="comment" type="TextArea">
                    <label>Comment</label>
                    <custom-text>contentdata/comment</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="Related content">
            <label>Related content</label>
            <items>
                <input name="related" type="ContentSelector">
                    <label>Related content</label>
                    <custom-text>contentdata/related</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Idebanken_artikkel</allow-content-type>
                        <allow-content-type>no.nav.navno:Idebanken_virksomhetseksempel</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
