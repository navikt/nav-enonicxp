<content-type>
    <display-name>nav.pressemelding</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Pressemelding">
            <label>Pressemelding</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="originaltitle" type="TextLine">
                    <label>Norsk tittel (hvis fremmedspråklig innhold)</label>
                    <custom-text>contentdata/originaltitle</custom-text>
                    <help-text>For fremmedspråklig innhold kan norsk tittel angis her. Norsk tittel vil da vises ved siden av fremmedspråklig tittel i arkivmappene i admin.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="hide_date" type="CheckBox">
                    <label>Skjul dato</label>
                    <custom-text>contentdata/hide_date</custom-text>
                    <help-text>Huk av hvis nyhet skal ha lang levetid, slik at innhold ikke virker utdatert</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="preface" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/preface</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="text" type="HtmlArea">
                    <label>Brødtekst</label>
                    <custom-text>contentdata/text</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="Deling på sosiale medier">
            <label>Deling på sosiale medier</label>
            <items>
                <input name="share-facebook" type="CheckBox">
                    <label>Vis 'Del på Facebook'</label>
                    <custom-text>contentdata/share-facebook</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="share-twitter" type="CheckBox">
                    <label>Vis 'Del på Twitter'</label>
                    <custom-text>contentdata/share-twitter</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="share-linkedin" type="CheckBox">
                    <label>Vis 'Del på LinkedIn'</label>
                    <custom-text>contentdata/share-linkedin</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Bilde og bildetekst">
            <label>Bilde og bildetekst</label>
            <items>
                <input name="imagesize" type="RadioButton">
                    <label>Bildestørrelse</label>
                    <custom-text>contentdata/imagesize</custom-text>
                    <help-text>Velg bildestørrelse fra 40% til 100% (kun for desktop visning)</help-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="100">100%</option>
                        <option value="70">70%</option>
                        <option value="40">40%</option>
                        <option value="">Ingen</option>
                    </config>
                </input>
                <input name="image" type="ImageSelector">
                    <label>Bilde</label>
                    <custom-text>contentdata/image</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="caption" type="TextArea">
                    <label>Bildetekst</label>
                    <custom-text>contentdata/caption</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="newschemas">
            <label>Skjemaer</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="newschema" type="ContentSelector">
                    <label>Skjema</label>
                    <custom-text>newschema</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Skjema</allow-content-type>
                        <allow-content-type>no.nav.navno:Skjema_for_veileder</allow-content-type>
                    </config>
                </input>
                <input name="veileder" type="ComboBox">
                    <label>Veiledertype</label>
                    <custom-text>veileder</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="Privatperson">Privatperson</option>
                        <option value="Arbeidsgiver">Arbeidsgiver</option>
                        <option value="Ettersender">Ettersender</option>
                        <option value="Engelsk">Engelsk</option>
                    </config>
                </input>
            </items>
        </item-set>
        <field-set name="Relatert informasjon">
            <label>Relatert informasjon</label>
            <items>
                <input name="links" type="ContentSelector">
                    <label>Innhold</label>
                    <custom-text>contentdata/links</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Fil</allow-content-type>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                        <allow-content-type>no.nav.navno:Enhetsinformasjon</allow-content-type>
                        <allow-content-type>no.nav.navno:Rapport_handbok</allow-content-type>
                        <allow-content-type>no.nav.navno:Kort_om</allow-content-type>
                        <allow-content-type>no.nav.navno:nav.nyhet</allow-content-type>
                        <allow-content-type>no.nav.navno:nav.rapporthandbok</allow-content-type>
                        <allow-content-type>no.nav.navno:Artikkel_Brukerportal</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Faktaboks">
            <label>Faktaboks</label>
            <items>
                <input name="fact_placement" type="RadioButton">
                    <label>På www.nav.no skal faktaboksen plasseres</label>
                    <custom-text>contentdata/fact_placement</custom-text>
                    <help-text>For at faktaboksen skal vises på www.nav.no må et av alternativene velges her. Gjelder ikke for "beta".</help-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="sidebar">i høyre kolonne</option>
                        <option value="maincol">under brødtekst i hovedkolonne</option>
                    </config>
                </input>
                <input name="fact" type="HtmlArea">
                    <label>Faktaboks</label>
                    <custom-text>contentdata/fact</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Andre språkversjoner">
            <label>Andre språkversjoner</label>
            <items>
                <input name="languages" type="ContentSelector">
                    <label>Språkversjoner av denne nyheten</label>
                    <custom-text>contentdata/languages</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:nav.pressemelding</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
