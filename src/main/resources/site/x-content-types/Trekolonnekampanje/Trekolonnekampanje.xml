<content-type>
    <display-name>Trekolonnekampanje</display-name>
    <description>Til bruk på seksjonsforsider</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Kampanje info">
            <label>Kampanje info</label>
            <items>
                <input name="campaignTitle" type="TextLine">
                    <label>Tittel på kampanjen</label>
                    <custom-text>contentdata/campaignTitle</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="Kampanje en">
            <label>Kampanje en</label>
            <items>
                <input name="campaignOneName" type="TextLine">
                    <label>Navn</label>
                    <custom-text>contentdata/campaignOneName</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignOneText" type="TextLine">
                    <label>Innhold</label>
                    <custom-text>contentdata/campaignOneText</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignOneLinkText" type="TextLine">
                    <label>Lenketekst</label>
                    <custom-text>contentdata/campaignOneLinkText</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignOneLink" type="ContentSelector">
                    <label>Lenke</label>
                    <custom-text>contentdata/campaignOneLink</custom-text>
                    <help-text>Velg kun en lenke</help-text>
                    <occurrences maximum="0" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                    </config>
                </input>
                <input name="campaignOneImage" type="ImageSelector">
                    <label>Kampanjebilde</label>
                    <custom-text>contentdata/campaignOneImage</custom-text>
                    <help-text>Verifiser at bildet som lastes opp er minumum 138px bred</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="Kampanje to">
            <label>Kampanje to</label>
            <items>
                <input name="campaignTwoName" type="TextLine">
                    <label>Navn</label>
                    <custom-text>contentdata/campaignTwoName</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignTwoText" type="TextLine">
                    <label>Innhold</label>
                    <custom-text>contentdata/campaignTwoText</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignTwoLinkText" type="TextLine">
                    <label>Lenketekst</label>
                    <custom-text>contentdata/campaignTwoLinkText</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignTwoLink" type="ContentSelector">
                    <label>Lenke</label>
                    <custom-text>contentdata/campaignTwoLink</custom-text>
                    <help-text>Velg kun en lenke</help-text>
                    <occurrences maximum="0" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                    </config>
                </input>
                <input name="campaignTwoImage" type="ImageSelector">
                    <label>Kampanjebilde</label>
                    <custom-text>contentdata/campaignTwoImage</custom-text>
                    <help-text>Verifiser at bildet som lastes opp er minumum 138px bred</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="Kampanje tre">
            <label>Kampanje tre</label>
            <items>
                <input name="campaignThreeName" type="TextLine">
                    <label>Navn</label>
                    <custom-text>contentdata/campaignThreeName</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignThreeText" type="TextLine">
                    <label>Innhold</label>
                    <custom-text>contentdata/campaignThreeText</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignThreeLinkText" type="TextLine">
                    <label>Lenketekst</label>
                    <custom-text>contentdata/campaignThreeLinkText</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="campaignThreeLink" type="ContentSelector">
                    <label>Lenke</label>
                    <custom-text>contentdata/campaignThreeLink</custom-text>
                    <help-text>Velg kun en lenke</help-text>
                    <occurrences maximum="0" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                    </config>
                </input>
                <input name="campaignThreeImage" type="ImageSelector">
                    <label>Kampanjebilde</label>
                    <custom-text>contentdata/campaignThreeImage</custom-text>
                    <help-text>Verifiser at bildet som lastes opp er minumum 138px bred</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
