<content-type>
    <display-name>Idebanken_slideshow</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Hovedfelt">
            <label>Hovedfelt</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/title</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="description" type="TextArea">
                    <label>Beskrivelse</label>
                    <custom-text>contentdata/description</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Innhold i slideshow">
            <label>Innhold i slideshow</label>
            <items>
                <input name="resource" type="ContentSelector">
                    <label>Temahefter</label>
                    <custom-text>contentdata/resource</custom-text>
                    <occurrences maximum="0" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Idebanken_temahefte</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
