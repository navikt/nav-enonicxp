<content-type>
    <display-name>Seniorporten_Banner</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Banner">
            <label>Banner</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Kampanjenavn</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="bannerText" type="TextLine">
                    <label>Kampanjetekst linje en</label>
                    <custom-text>contentdata/bannerText</custom-text>
                    <help-text>Kontroller at visningen av teksten ikke går over mer enn én linje</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="bannerImage" type="ImageSelector">
                    <label>Kampanjebilde</label>
                    <custom-text>contentdata/bannerImage</custom-text>
                    <help-text>Kampanjebilde må være publisert med original bildestørrelse 136 × 120 bildepunkter (kampanje med ett bilde) eller 222 × n bildepunkter (kampanje med to bilder; bare internett).</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="relatedlinklist" type="ContentSelector">
                    <label>Lenke til</label>
                    <custom-text>contentdata/relatedlinklist</custom-text>
                    <help-text>Legg kun til én lenke per kampanje. Hvis man legger inn flere, vil bare den første lenken brukes.</help-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Seniorporten_Artikkel</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
