<content-type>
    <display-name>Sporring</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Sporring">
            <label>Sporring</label>
            <items>
                <input name="keyword" type="TextLine">
                    <label>Nøkkelord</label>
                    <custom-text>contentdata/keyword</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="query" type="TextLine">
                    <label>Spørring</label>
                    <custom-text>contentdata/query</custom-text>
                    <help-text>Eksempelspørring: data/* CONTAINS "stønad"</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
