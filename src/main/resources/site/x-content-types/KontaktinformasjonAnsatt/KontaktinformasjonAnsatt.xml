<content-type>
    <display-name>KontaktinformasjonAnsatt</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Ansatt">
            <label>Ansatt</label>
            <items>
                <input name="family_name" type="TextLine">
                    <label>Etternavn</label>
                    <custom-text>contentdata/family_name</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="given_name" type="TextLine">
                    <label>Fornavn</label>
                    <custom-text>contentdata/given_name</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="role" type="TextLine">
                    <label>Stilling</label>
                    <custom-text>contentdata/role</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="organisation" type="ContentSelector">
                    <label>Enhet</label>
                    <custom-text>contentdata/organisation</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Enhetsinformasjon</allow-content-type>
                    </config>
                </input>
                <input name="room_number" type="TextLine">
                    <label>Romnummer</label>
                    <custom-text>contentdata/room_number</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="telephone" type="TextLine">
                    <label>Telefon</label>
                    <custom-text>contentdata/telephone</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="switchboard" type="TextLine">
                    <label>Sentralbord</label>
                    <custom-text>contentdata/switchboard</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="telefax" type="TextLine">
                    <label>Telefaks</label>
                    <custom-text>contentdata/telefax</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="mobile" type="TextLine">
                    <label>Mobiltelefon</label>
                    <custom-text>contentdata/mobile</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="private" type="TextLine">
                    <label>Privat telefon</label>
                    <custom-text>contentdata/private</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="email" type="TextLine">
                    <label>E-post</label>
                    <custom-text>contentdata/email</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="emneord" type="ContentSelector">
                    <label>Arbeidsomr√•de</label>
                    <custom-text>contentdata/emneord</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Emne</allow-content-type>
                    </config>
                </input>
                <input name="picture" type="ImageSelector">
                    <label>Bilde</label>
                    <custom-text>contentdata/picture</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
