<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Brukertester</display-name>
    <form>
        <input type="ContentSelector" name="tests">
            <label>Velg test-gruppering</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowContentType>${app}:user-tests-config</allowContentType>
            </config>
        </input>
        <input type="TextLine" name="selectedTestIds">
            <label>Skriv inn variant-id'er dersom kun spesifikk varianter skal kunne vises</label>
            <occurrences minimum="0" maximum="0"/>
        </input>
    </form>
</part>
