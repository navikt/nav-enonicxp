<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Skjemadetaljer</display-name>
    <description>Viser valgte skjemadetaljer</description>
    <form>
        <input name="targetFormDetails" type="ContentSelector">
            <label>Velg side</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <allowContentType>${app}:form-details</allowContentType>
            </config>
        </input>
        <input name="showApplicationForms" type="CheckBox">
            <help-text>Vises kun dersom det faktisk er lagt inn en variasjon for dette i skjemaet.</help-text>
            <label>Vis sÃ¸knader og skjemaer</label>
        </input>
        <input name="showComplaintForms" type="CheckBox">
            <help-text>Vises kun dersom det faktisk er lagt inn en variasjon for dette i skjemaet.</help-text>
            <label>Vis klage og anke</label>
        </input>
    </form>
    <config>
        <allow-on-content-type>${app}:content-page-with-sidemenus</allow-on-content-type>
        <allow-on-content-type>${app}:guide-page</allow-on-content-type>
        <allow-on-content-type>${app}:themed-article-page</allow-on-content-type>
    </config>
</part>
