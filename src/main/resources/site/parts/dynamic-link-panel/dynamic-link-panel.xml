<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Dynamisk lenkepanel med bakgrunn</display-name>
    <description>Ink tittel, ingress og bakgrunn</description>
    <form>
        <input type="TextLine" name="title">
            <label>Tittel</label>
        </input>
        <input type="TextArea" name="description">
            <label>Beskrivelse (overstyrer ingress fra valgt innhold)</label>
        </input>
        <input name="background" type="ImageSelector">
            <label>Bakgrunn</label>
        </input>
        <input name="target" type="ContentSelector">
            <label>Innhold det skal henvises til</label>
            <help-text>Velg innhold som det skal henvises til</help-text>
            <occurrences maximum="1" minimum="1"/>
            <config>
                <allowPath>/www.nav.no/*</allowPath>
                <showStatus>true</showStatus>
            </config>
        </input>
    </form>
</part>
