<part>
    <display-name>Utbetalingsdatoer</display-name>
    <description>Setter inn en tabell med utbetalingsdatoer</description>
    <form>
        <input name="dates" type="ContentSelector">
            <label>Velg utbetalingsdatoer</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <allowContentType>${app}:payout-dates</allowContentType>
            </config>
        </input>
        <mixin name="expandable"/>
        <mixin name="auth-render-option"/>
    </form>
    <config>
        <allow-on-content-type>${app}:product-details</allow-on-content-type>
    </config>
</part>
