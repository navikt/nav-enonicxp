<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Brukertestpanel til forside</display-name>
    <description>Benyttes på forsiden til å invitere til brukertest.</description>
    <form>
        <input type="TextLine" name="header">
            <label>Overskrift</label>
            <help-text>Overskrift er ikke påkrevet</help-text>
        </input>
        <input type="HtmlArea" name="description">
            <label>Beskrivelse</label>
        </input>
        <item-set name="icon">
            <label>Ikon</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <mixin name="icon-selector"/>
                <input type="Long" name="size">
                    <label>Størrelse (%)</label>
                    <help-text>Sett til 0 for automatisk tilpasset størrelse</help-text>
                    <default>0</default>
                    <config>
                        <min>0</min>
                        <max>100</max>
                    </config>
                </input>
            </items>
        </item-set>
        <mixin name="auth-render-option"/>
    </form>
    <config>
        <allow-on-content-type>${app}:front-page</allow-on-content-type>
        <allow-on-content-type>${app}:dynamic-page</allow-on-content-type>
        <allow-on-content-type>${app}:section-page</allow-on-content-type>
        <allow-on-content-type>portal:page-template</allow-on-content-type>
    </config>
</part>
