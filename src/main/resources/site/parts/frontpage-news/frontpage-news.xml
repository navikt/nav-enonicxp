<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Forsidenyheter</display-name>
    <description>Viser prioriterte nyheter p√• forsiden som velges i innstillingene.</description>
    <form>
        <input name="title" type="TextLine">
            <label>Tittel</label>
        </input>
        <input name="newsList" type="ContentSelector">
            <label>Velg maks 2 nyhetsartikler</label>
            <occurrences minimum="0" maximum="2"/>
            <config>
                <allowContentType>no.nav.navno:main-article</allowContentType>
                <allowPath>${site}/*</allowPath>
            </config>
        </input> 
        <item-set name="moreNews">
            <label>Flere nyheter</label>
            <occurrences minimum="0" maximum="1" />
            <items>
                <input name="url" type="TextLine">
                    <label>Lenke</label>
                    <default>/sok?f=1&amp;s=1</default>
                    <occurrences minimum="1" maximum="1" />
                </input>
                <input name="text" type="TextLine">
                    <label>Lenketekst</label>
                    <default>Flere nyheter</default>
                    <occurrences minimum="1" maximum="1" />
                </input>
            </items>
        </item-set>       
    </form>
</part>
