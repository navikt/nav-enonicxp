<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Innloggede tjenester</display-name>
    <description>Panel med lenker til innloggede tjenester - vises kun for innlogget bruker</description>
    <form>
        <field-set>
            <label>Overskrift</label>
            <items>
                <input name="header" type="TextLine">
                    <label>Tekst</label>
                    <help-text>"$navn" vil erstattes av navn pÃ¥ innlogget bruker</help-text>
                    <occurrences minimum="1" maximum="1"/>
                    <default>Hei, $navn</default>
                </input>
            </items>
        </field-set>
        <item-set name="cards">
            <label>Lenkekort</label>
            <occurrences minimum="0" maximum="3"/>
            <items>
                <mixin name="link"/>
                <input name="graphic" type="ComboBox">
                    <label>Grafikk</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <option value="wallet">Utbetalinger (lommebok)</option>
                        <option value="document">Saker (dokumnet)</option>
                        <option value="wallet">Meldekort (brev)</option>
                    </config>
                </input>
            </items>
        </item-set>
        <field-set>
            <label>Min side lenke</label>
            <items>
                <mixin name="link"/>
            </items>
        </field-set>
    </form>
    <config>
        <allow-on-content-type>${app}:front-page</allow-on-content-type>
    </config>
</part>
