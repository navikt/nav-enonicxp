<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Kontakt-oss kanal</display-name>
    <description>Chat, skriv til oss eller telefon</description>
    <form>
        <option-set name="contactOptions">
            <label>Kontakt-oss kanaler</label>
            <expanded>true</expanded>
            <occurrences minimum="1" maximum="1"/>
            <options minimum="1" maximum="1">
                <option name="chat">
                    <label>Chat</label>
                    <items>
                        <input name="ingress" type="TextArea">
                            <label>Overstyr ingress</label>
                        </input>
                    </items>
                </option>
                <option name="write">
                    <label>Skriv til oss</label>
                    <items>
                        <input name="title" type="TextLine">
                            <label>Overstyr tittel</label>
                        </input>
                        <input name="url" type="TextLine">
                            <label>Overstyr URL</label>
                        </input>
                        <input name="ingress" type="TextArea">
                            <label>Overstyr ingress</label>
                        </input>
                    </items>
                </option>
                <option name="call">
                    <label>Ring oss</label>
                    <items>
                        <input name="sharedContactInformation" type="ContentSelector">
                            <label>Velg telefonnummer</label>
                            <config>
                                <allowContentType>${app}:contact-information</allowContentType>
                            </config>
                        </input>
                        <input name="ingress" type="TextArea">
                            <label>Overstyr ingress</label>
                        </input>
                        <!-- Dummy value for backwards compatibility (prevents graphql schema error) -->
                        <input name="phoneNumber" type="RadioButton">
                            <label>-</label>
                            <occurrences minimum="0" maximum="1"/>
                        </input>
                    </items>
                </option>
                <option name="custom">
                    <label>Egentilpasset</label>
                    <help-text>Brukes til andre Kontaktkanaler</help-text>
                    <items>
                        <input name="title" type="TextLine">
                            <label>Tittel</label>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                        <option-set name="icon">
                            <label>Ikon</label>
                            <occurrences minimum="1" maximum="1"/>
                            <options minimum="1" maximum="1">
                                <option name="facebook">
                                    <label>Facebook</label>
                                </option>
                                <option name="linkedin">
                                    <label>LinkedIn</label>
                                </option>
                            </options>
                        </option-set>
                        <input name="url" type="TextLine">
                            <label>Url</label>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                        <input name="ingress" type="TextArea">
                            <label>Ingress</label>
                        </input>
                    </items>
                </option>
            </options>
        </option-set>
        <mixin name="auth-render-option"/>
    </form>
</part>
