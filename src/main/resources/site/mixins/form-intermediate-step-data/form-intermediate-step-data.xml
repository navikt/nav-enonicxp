<mixin>
    <form>
        <field-set>
            <label>Mellomsteg</label>
            <items>
                <mixin name="html-area" />
                <item-set name="steps">
                    <label>Enkeltsteg</label>
                    <occurrences minimum="1" maximum="0" />
                    <items>
                        <mixin name="form-intermediate-step-data-meta" />
                        <option-set name="nextStep">
                            <label>Dette valget sender brukeren videre til:</label>
                            <occurrences minimum="1" maximum="1" />
                            <options minimum="1" maximum="1">
                                <option name="internal">
                                    <label><![CDATA[Intern lenke til skjema, søknad eller klage]]></label>
                                    <help-text><![CDATA[Brukeren skal sendes til dokument som ligger på Enonic XP]]></help-text>
                                    <default>true</default> <!-- TODO: hvorfor default? Fjern? -->
                                    <items>
                                        <input name="internalContent" type="MediaSelector">
                                            <label><![CDATA[Internt innhold]]></label>
                                            <occurrences minimum="1" maximum="1" />
                                            <config>
                                                <allowContentType>media:document</allowContentType>
                                            </config>
                                        </input>
                                    </items>
                                </option>
                                <option name="external">
                                    <label><![CDATA[Ekstern lenke til skjema, søknad eller klage]]></label>
                                    <help-text><![CDATA[Brukeren skal sendes til en app eller tjeneste utenfor Enonic XP]]></help-text>
                                    <items>
                                        <input name="formNumber"
                                            type="TextLine">
                                            <label>Skjemanummer</label>
                                            <occurrences minimum="0"
                                                maximum="1" />
                                        </input>
                                        <input name="externalUrl" type="TextLine">
                                            <label><![CDATA[Ekstern URL]]></label>
                                            <occurrences minimum="0" maximum="1" />
                                            <!-- <config>
                                                <regexp>^https?:\/\/.*</regexp>
                                            </config> -->
                                        </input>
                                    </items>
                                </option>
                                <option name="next">
                                    <label>Nytt steg, nivå 2</label>
                                    <help-text><![CDATA[Brukeren skal sendes til et nytt steg for nye veivalg]]></help-text>
                                    <items>
                                        <field-set>
                                            <label>Enkeltsteg</label>
                                            <items>
                                                <item-set name="steps">
                                                    <label>Steg</label>
                                                    <occurrences minimum="1" maximum="0" />
                                                    <items>
                                                        <mixin
                                                            name="form-intermediate-step-data-meta" />
                                                        <option-set name="nextStep">
                                                            <label>Dette valget sender brukeren
                                                                videre til:</label>
                                                            <occurrences minimum="1" maximum="1" />
                                                            <options minimum="1" maximum="1">
                                                                <option name="internal">
                                                                    <label><![CDATA[Intern lenke til skjema, søknad eller klage]]></label>
                                                                    <help-text><![CDATA[Brukeren skal sendes til dokument som ligger på Enonic XP]]></help-text>
                                                                    <default>true</default>
                                                                    <items>
                                                                        <input
                                                                            name="internalContent"
                                                                            type="MediaSelector">
                                                                            <label><![CDATA[Internt innhold]]></label>
                                                                            <occurrences minimum="1"
                                                                                maximum="1" />
                                                                            <config>
                                                                                <allowContentType>
                                                                                    media:document</allowContentType>
                                                                            </config>
                                                                        </input>
                                                                    </items>
                                                                </option>
                                                                <option name="external">
                                                                    <label><![CDATA[Ekstern lenke til skjema, søknad eller klage]]></label>
                                                                    <help-text><![CDATA[Brukeren skal sendes til en app eller tjeneste utenfor Enonic XP]]></help-text>
                                                                    <items>
                                                                        <input name="formNumber"
                                                                            type="TextLine">
                                                                            <label>Skjemanummer</label>
                                                                            <occurrences minimum="0"
                                                                                maximum="1" />
                                                                        </input>
                                                                        <input name="externalUrl"
                                                                            type="TextLine">
                                                                            <label><![CDATA[Ekstern URL]]></label>
                                                                            <occurrences minimum="1"
                                                                                maximum="1" />
                                                                            <!-- <config>
                                                                                <regexp>
                                                                                    ^https?:\/\/.*</regexp>
                                                                            </config> -->
                                                                        </input>
                                                                    </items>
                                                                </option>
                                                                <option name="next">
                                                                    <label>Nytt steg, nivå 3</label>
                                                                    <items>
                                                                        <field-set>
                                                                            <label>Enkeltsteg</label>
                                                                            <items>
                                                                                <item-set
                                                                                    name="steps">
                                                                                    <label>Steg</label>
                                                                                    <occurrences
                                                                                        minimum="1"
                                                                                        maximum="0" />
                                                                                    <items>
                                                                                        <mixin
                                                                                            name="form-intermediate-step-data-meta" />
                                                                                        <option-set
                                                                                            name="nextStep">
                                                                                            <label>Dette
                                                                                                valget
                                                                                                sender
                                                                                                brukeren
                                                                                                videre
                                                                                                til:</label>
                                                                                            <occurrences
                                                                                                minimum="1"
                                                                                                maximum="1" />
                                                                                            <options
                                                                                                minimum="1"
                                                                                                maximum="1">
                                                                                                <option
                                                                                                    name="internal">
                                                                                                    <label><![CDATA[Intern lenke til skjema, søknad eller klage]]></label>
                                                                                                    <help-text><![CDATA[Brukeren skal sendes til dokument som ligger på Enonic XP]]></help-text>
                                                                                                    <default>
                                                                                                        true</default>
                                                                                                    <items>
                                                                                                        <input
                                                                                                            name="internalContent"
                                                                                                            type="MediaSelector">
                                                                                                            <label><![CDATA[Internt innhold]]></label>
                                                                                                            <occurrences
                                                                                                                minimum="1"
                                                                                                                maximum="1" />
                                                                                                            <config>
                                                                                                                <allowContentType>
                                                                                                                    media:document</allowContentType>
                                                                                                            </config>
                                                                                                        </input>
                                                                                                    </items>
                                                                                                </option>
                                                                                                <option
                                                                                                    name="external">
                                                                                                    <label><![CDATA[Ekstern lenke til skjema, søknad eller klage]]></label>
                                                                                                    <help-text><![CDATA[Brukeren skal sendes til en app eller tjeneste utenfor Enonic XP]]></help-text>
                                                                                                    <items>
                                                                                                        <input
                                                                                                            name="formNumber"
                                                                                                            type="TextLine">
                                                                                                            <label>
                                                                                                                Skjemanummer</label>
                                                                                                            <occurrences
                                                                                                                minimum="0"
                                                                                                                maximum="1" />
                                                                                                        </input>
                                                                                                        <input
                                                                                                            name="externalUrl"
                                                                                                            type="TextLine">
                                                                                                            <label><![CDATA[Ekstern URL]]></label>
                                                                                                            <occurrences
                                                                                                                minimum="1"
                                                                                                                maximum="1" />
                                                                                                            <!--
                                                                                                            <config>
                                                                                                                <regexp>
                                                                                                                    ^https?:\/\/.*</regexp>
                                                                                                            </config> -->
                                                                                                        </input>
                                                                                                    </items>
                                                                                                </option>
                                                                                            </options>
                                                                                        </option-set>
                                                                                    </items>
                                                                                </item-set>
                                                                            </items>
                                                                        </field-set>
                                                                    </items>
                                                                </option>
                                                            </options>
                                                        </option-set>
                                                    </items>
                                                </item-set>
                                            </items>
                                        </field-set>
                                    </items>
                                </option>
                            </options>
                        </option-set>
                    </items>
                </item-set>
            </items>
        </field-set>
    </form>
</mixin>