<mixin>
    <form>
        <field-set>
            <label>Mellomsteg</label>
            <items>
                <input name="editorial" type="HtmlArea">
                    <label>Redaksjonelt innhold ovenfor valgene</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="stepsHeadline" type="TextLine">
                    <label>Overskrift til stegene</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <item-set name="steps">
                    <label>Enkeltsteg</label>
                    <occurrences minimum="1" maximum="0"/>
                    <items>
                        <mixin name="form-intermediate-step-data-action" />
                        <option-set name="nextStep">
                            <label>Hvor blir brukeren sendt etter dette valget</label>
                            <occurrences minimum="1" maximum="1" />
                            <options minimum="1" maximum="1">
                                <option name="external">
                                    <label>Utgang til skjema / søknad / klage</label>
                                    <help-text>Brukeren skal sendes til en app eller tjeneste utenfor Enonc XP</help-text>
                                    <items>
                                        <input name="externalUrl" type="TextLine">
                                            <label>Ekstern URL til søknad eller liknende</label>
                                            <occurrences minimum="0" maximum="1"/>
                                        </input>
                                    </items>
                                </option>
                                <option name="next">
                                    <label>Nytt steg</label>
                                    <help-text>Brukeren skal sendes til et nytt steg for nye veivalg</help-text>
                                    <items>
                                        <field-set>
                                            <label>Enkeltsteg</label>
                                            <items>
                                                <input name="editorial" type="HtmlArea">
                                                    <label>Redaksjonelt innhold ovenfor valgene</label>
                                                    <occurrences minimum="0" maximum="1"/>
                                                </input>
                                                <input name="stepsHeadline" type="TextLine">
                                                    <label>Overskrift til stegene</label>
                                                    <occurrences minimum="0" maximum="1"/>
                                                </input>
                                                <item-set name="steps">
                                                    <label>Steg</label>
                                                    <occurrences minimum="1" maximum="0"/>
                                                    <items>
                                                        <mixin name="form-intermediate-step-data-action" />
                                                        <input name="externalUrl" type="TextLine">
                                                            <label>Ekstern URL til søknad eller liknende</label>
                                                            <occurrences minimum="0" maximum="1"/>
                                                        </input>
                                                    </items>
                                                </item-set>
                                            </items>
                                        </field-set>
                                    </items>
                                </option>
                            </options>
                        </option-set>
                    </items>
                </item-set>
            </items>
        </field-set>
    </form>
</mixin>
