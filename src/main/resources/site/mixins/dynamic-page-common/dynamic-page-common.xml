<mixin>
    <form>
        <mixin name="languages-legacy"/>
        <mixin name="decorator-toggles"/>
        <field-set>
            <label>For internt søk</label>
            <items>
                <input type="TextArea" name="description">
                    <label>Oppsummering</label>
                    <help-text>Vises når denne siden lenkes til fra enkelte andre sider, og i
                        søkeresultater. Bør være maks 240 tegn.
                    </help-text>
                </input>
                <mixin name="keywords"/>
            </items>
        </field-set>
        <mixin name="seo"/>
    </form>
</mixin>
