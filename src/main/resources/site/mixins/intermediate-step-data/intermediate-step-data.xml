<mixin>
    <form>
        <field-set>
            <label>Mellomsteg</label>
            <items>
                <input name="editorial" type="HtmlArea">
                    <label>Redaksjonelt innhold ovenfor valgene</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <item-set name="steps">
                    <label>Steg</label>
                    <occurrences minimum="1" maximum="0"/>
                    <items>
                        <input name="label" type="TextLine">
                            <label>Tittel på valget</label>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                        <input name="explanation" type="TextLine">
                            <label>Ekstra forklaring</label>
                            <occurrences minimum="0" maximum="1"/>
                        </input>
                        <input name="externalUrl" type="TextLine">
                            <label>Ekstern URL til søknad eller liknende</label>
                            <occurrences minimum="0" maximum="1"/>
                        </input>
                        <field-set>
                            <label>Steginnhold</label>
                            <items>
                                <mixin name="intermediate-step-data"/>
                            </items>
                        </field-set>
                    </items>
                </item-set>
            </items>
        </field-set>
    </form>
</mixin>
