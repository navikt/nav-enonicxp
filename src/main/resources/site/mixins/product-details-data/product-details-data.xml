<mixin>
    <form>
        <field-set name="product-details">
            <label>Produktdetaljer</label>
            <items>
                <input name="detailType" type="ComboBox">
                    <label>Type produktdetaljer</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <option value="rates">Satser</option>
                        <option value="payout_dates">Utbetalingdatoer</option>
                        <option value="processing_times">Saksbehandlingstider</option>
                    </config>
                </input>
                <input name="pageUsageReference" type="ContentSelector">
                    <label>Velg tilhÃ¸rende sider:</label>
                    <occurrences minimum="1" maximum="5"/>
                    <config>
                        <allowContentType>${app}:content-page-with-sidemenus</allowContentType>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</mixin>
