<mixin>
    <form>
        <field-set>
            <label>Utvidbart panel</label>
            <items>
                <input name="expandable" type="CheckBox">
                    <label>Utvidbar</label>
                    <config>
                        <default>unchecked</default>
                    </config>
                </input>
                <input name="expandableTitle" type="TextLine">
                    <label>Tittel pÃ¥ utvidbart panel</label>
                    <config>
                        <default>Tittel</default>
                    </config>
                </input>
                <input name="expandableAnchorId" type="TextLine">
                    <label>Anker-id pÃ¥ utvidbart panel</label>
                    <help-text>Sett denne dersom det skal lenkes direkte til dette panelet, f.eks. nav.no/min-side#mitt-anker-id</help-text>
                    <config>
                        <regexp>^[0-9a-zA-Z-_]+$</regexp>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</mixin>
