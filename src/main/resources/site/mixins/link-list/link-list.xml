<mixin>
    <form>
        <option-set name="list">
            <label>Lenker</label>
            <occurrences minimum="1" maximum="1"/>
            <options minimum="1" maximum="1">
                <option name="contentList">
                    <mixin name="content-list" />
                </option>
                <option name="linkList">
                    <label>Sett lenker direkte</label>
                    <items>
                        <mixin name="links"/>
                    </items>
                </option>
            </options>
        </option-set>
    </form>
</mixin>
