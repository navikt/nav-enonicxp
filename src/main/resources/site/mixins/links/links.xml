<mixin>
    <form>
        <option-set name="links">
            <label>Lenke</label>
            <occurrences minimum="0" maximum="0"/>
            <options minimum="1" maximum="1">
                <option name="internal">
                    <label>Intern lenke</label>
                    <default>true</default>
                    <items>
                        <input name="target" type="ContentSelector">
                            <label>Innhold det skal lenkes til</label>
                            <occurrences minimum="1" maximum="1"/>
                            <config>
                                <allowPath>/www.nav.no/*</allowPath>
                                <allowContentType>^(?!media:*$).*</allowContentType>
                                <showStatus>true</showStatus>
                            </config>
                        </input>
                        <input name="text" type="TextLine">
                            <label>Lenketekst (hvis tom vil tittel p√• innholdet vises)</label>
                        </input>
                    </items>
                </option>
                <option name="external">
                    <label>Ekstern lenke</label>
                    <help-text>Lenke til innhold utenfor CMS'et</help-text>
                    <items>
                        <input name="url" type="TextLine">
                            <label>URL</label>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                        <input name="text" type="TextLine">
                            <label>Lenketekst</label>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                    </items>
                </option>
            </options>
        </option-set>
    </form>
</mixin>
