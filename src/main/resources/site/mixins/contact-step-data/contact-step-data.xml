<mixin>
    <form>
        <field-set>
            <label>Lenker</label>
            <items>
                <input name="linksHeading" type="TextLine">
                    <label>Overskrift</label>
                    <occurrences minimum="0" maximum="1" />
                </input>
                <input name="linksSubHeadline" type="TextLine">
                    <label>Undertittel</label>
                    <occurrences minimum="0" maximum="1" />
                </input>
                <item-set name="steps">
                    <occurrences minimum="1" maximum="0" />
                    <items>
                        <input name="label" type="TextLine">
                            <label>Tittel</label>
                            <occurrences minimum="1" maximum="1" />
                        </input>
                        <input name="explanation" type="TextArea">
                            <label>Ekstra forklaring</label>
                            <occurrences minimum="0" maximum="1" />
                        </input>
                        <option-set name="nextStep">
                            <occurrences minimum="1" maximum="1" />
                            <options minimum="1" maximum="1">
                                <option name="internal">
                                    <label>Intern lenke</label>
                                    <items>
                                        <input name="internalLink" type="ContentSelector">
                                            <label>Intern lenke</label>
                                            <occurrences minimum="0" maximum="1" />
                                            <config>
                                                <allowContentType>no.nav.navno:contact-step-page</allowContentType>
                                                <allowPath>${site}</allowPath>
                                                <treeMode>false</treeMode>
                                                <showStatus>true</showStatus>
                                            </config>
                                        </input>
                                    </items>
                                </option>
                                <option name="external">
                                    <label>Ekstern lenke</label>
                                    <items>
                                        <input name="externalUrl" type="TextLine">
                                            <label>Ekstern URL</label>
                                            <occurrences minimum="0" maximum="1" />
                                            <config>
                                                <regexp>^https?:\/\/.*</regexp>
                                            </config>
                                        </input>
                                    </items>
                                </option>
                            </options>
                        </option-set>
                    </items>
                </item-set>
            </items>
        </field-set>
    </form>
</mixin>