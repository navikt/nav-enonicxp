<mixin xmlns="urn:enonic:xp:model:1.0">
    <form>
        <field-set>
            <label>Filter</label>
            <items>
                <input name="filters" type="CustomSelector">
                    <label>Velg filtre</label>
                    <occurrences minimum="0" maximum="0"/>
                    <config>
                        <service>filterSelector</service>
                    </config>
                </input>
                <input name="filterLogic" type="RadioButton">
                    <label>Logikk</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <option value="or">ELLER</option>
                        <option value="and">OG</option>
                    </config>
                    <default>or</default>
                </input>
            </items>
        </field-set>
    </form>
</mixin>
