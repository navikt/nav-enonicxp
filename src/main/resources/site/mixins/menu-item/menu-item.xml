<?xml version="1.0" encoding="UTF-8"?>
<!--
	DESCRIPTION:
	Based on "example-standard" but also adds an open for "Open in new window" checkbox to all content.
-->
<mixin>
	<display-name>Menu settings</display-name>
	<items>
		<input type="Checkbox" name="menuItem">
			<label>Show in Menu?</label>
			<occurrences minimum="0" maximum="1"/>
		</input>
		<input type="TextLine" name="menuName">
			<label>Override menu name</label><!-- Name to be used in menu. Optional -->
			<occurrences minimum="0" maximum="1"/>
		</input>
		<input type="Checkbox" name="newWindow">
			<label>Open in new window?</label>
			<occurrences minimum="0" maximum="1"/>
		</input>
	</items>
</mixin>
