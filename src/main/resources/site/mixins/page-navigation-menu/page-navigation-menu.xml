<mixin>
    <form>
        <item-set name="anchorLinks">
            <label>Overstyr lenketekst</label>
            <occurrences minimum="0" maximum="0"/>
            <items>
                <input type="TextLine" name="anchorId">
                    <label>Anker-id (må være unik på siden)</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="TextLine" name="linkText">
                    <label>Lenketekst</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
            </items>
        </item-set>
        <input type="RadioButton" name="dummyInputToPreventEmptyPartConfigDoNotRemove">
            <label>Klikk "mark as ready" for å oppdatere menyen</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <option value="dummy"> </option>
            </config>
            <default>dummy</default>
        </input>
    </form>
</mixin>
