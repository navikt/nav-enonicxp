<mixin>
    <form>
        <input type="Double" name="marginTop">
            <label>Topp-margin (rem-enheter)</label>
        </input>
        <input type="Double" name="marginBottom">
            <label>Bunn-margin (rem-enheter)</label>
        </input>
        <option-set name="paddingSides">
            <label>Horisontal padding</label>
            <occurrences minimum="1" maximum="1"/>
            <options minimum="1" maximum="1">
                <option name="standard">
                    <label>Standard</label>
                    <default>true</default>
                </option>
                <option name="fullWidth">
                    <label>Full skjermbredde</label>
                </option>
                <option name="custom">
                    <label>Tilpasset</label>
                    <items>
                        <input type="Double" name="remValue">
                            <label>(rem-enheter)</label>
                        </input>
                    </items>
                </option>
            </options>
        </option-set>
        <option-set name="paddingTopBottom">
            <label>Vertikal padding</label>
            <occurrences minimum="1" maximum="1"/>
            <options minimum="1" maximum="1">
                <option name="standard">
                    <label>Standard</label>
                    <default>true</default>
                </option>
                <option name="custom">
                    <label>Tilpasset</label>
                    <items>
                        <input type="Double" name="remValue">
                            <label>(rem-enheter)</label>
                        </input>
                    </items>
                </option>
            </options>
        </option-set>
        <item-set name="bgColor">
            <label>Bakgrunnsfarge</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <mixin name="color-picker"/>
            </items>
        </item-set>
        <input type="RadioButton" name="renderOnAuthState">
            <label>Innloggings-avhengig visning</label>
            <help-text>Velg om komponentene skal vises kun for innlogget eller uinnlogget bruker</help-text>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <option value="always">Vis alltid</option>
                <option value="loggedIn">Kun for innlogget</option>
                <option value="loggedOut">Kun for uinnlogget</option>
            </config>
            <default>always</default>
        </input>
    </form>
</mixin>
