<mixin>
    <form>
        <input type="Double" name="marginTop">
            <label>Topp-margin (rem-enheter)</label>
            <default>1</default>
        </input>
        <input type="Double" name="marginBottom">
            <label>Bunn-margin (rem-enheter)</label>
            <default>1</default>
        </input>
        <input type="TextLine" name="backgroundColor">
            <label>Bakgrunnsfarge (6-siffer hex-kode, eks. #2f0055)</label>
            <config>
                <max-length>7</max-length>
                <regexp>^(#[0-9a-fA-F]{6}|)$</regexp>
            </config>
        </input>
        <input type="CheckBox" name="bgFullWidth">
            <label>Bakgrunnsfarge skal dekke hele skjermbredden</label>
        </input>
    </form>
</mixin>
