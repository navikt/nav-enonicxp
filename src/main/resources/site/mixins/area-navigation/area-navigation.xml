<mixin>
    <form>
        <field-set>
            <label>Område- eller situasjonsnavigasjon</label>
            <items>
                <input name="areasRefs" type="ContentSelector">
                    <label>Velg områder</label>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allowContentType>${app}:area-page</allowContentType>
                    </config>
                </input>
                <input name="frontPageNestedRefs" type="ContentSelector">
                    <label>Velg underforsider</label>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allowContentType>${app}:front-page-nested</allowContentType>
                    </config>
                </input>
                <input name="situationsRefs" type="ContentSelector">
                    <label>Velg situasjonssider</label>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allowContentType>${app}:situation-page</allowContentType>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</mixin>