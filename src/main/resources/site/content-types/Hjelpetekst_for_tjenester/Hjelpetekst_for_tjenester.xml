<content-type>
    <display-name>Hjelpetekst_for_tjenester</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Hjelpetekst">
            <label>Hjelpetekst</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/title</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="helptext" type="TextArea">
                    <label>Hjelpetekst</label>
                    <custom-text>contentdata/helptext</custom-text>
                    <help-text>Denne teksten brukes av en tjeneste</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="explain" type="TextArea">
                    <label>Forklarende tekst</label>
                    <custom-text>contentdata/explain</custom-text>
                    <help-text>I dette feltet kan hjelpeteksten forklares. For                     eksempel vil det enkelte ganger være behov for                     å forklare de ulike inputparameterene</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
