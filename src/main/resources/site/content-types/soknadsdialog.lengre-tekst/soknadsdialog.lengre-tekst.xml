<content-type>
    <display-name>soknadsdialog.lengre-tekst</display-name>
    <description>Brukt av angular / JS apps som AAP, Foreldrepenger, Sendsøknad</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Formateringsvalg for søknadsdialoger (AAP, Foreldrepenger m fl)">
            <label>Formateringsvalg for søknadsdialoger (AAP, Foreldrepenger m.fl)</label>
            <items>
                <input name="textformatting" type="RadioButton">
                    <label>Hvilken type tekst er dette?</label>
                    <custom-text>contentdata/textformatting</custom-text>
                    <help-text/>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="html">1. Standard HTML-brødtekst med formatering (skal vises med avsnitt, lenker, lister og lignende)</option>
                        <option value="html-no-p">2. Ledetekst med lenke(r), utheving e.l, men uten avsnitt.</option>
                        <option value="string">3. Ledetekst uten formatering (vises som ren tekst)</option>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Tekst">
            <label>Tekst</label>
            <items>
                <input name="string-key" type="TextLine">
                    <label>Nøkkel</label>
                    <custom-text>contentdata/string-key</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="text" type="HtmlArea">
                    <label>Tekst</label>
                    <custom-text>contentdata/text</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
