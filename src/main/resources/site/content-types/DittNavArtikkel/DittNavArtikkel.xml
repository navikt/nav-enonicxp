<content-type>
    <display-name>DittNavArtikkel</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="DittNavArtikkel">
            <label>DittNavArtikkel</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="preface" type="TextLine">
                    <label>Ingress</label>
                    <custom-text>contentdata/preface</custom-text>
                    <help-text>Ingressen skal v√¶re veldig kort</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="ikon" type="ImageSelector">
                    <label>Ikon</label>
                    <custom-text>contentdata/ikon</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="lead" type="TextArea">
                    <label>Tekst</label>
                    <custom-text>contentdata/lead</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="url" type="TextLine">
                    <label>URL</label>
                    <custom-text>contentdata/url</custom-text>
                    <help-text>Benytt fullstendig URL. Eksempelvis slik: http://www.nav.no</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
