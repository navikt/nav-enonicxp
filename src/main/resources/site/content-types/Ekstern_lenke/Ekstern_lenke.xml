<content-type>
    <display-name>Ekstern_lenke</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Ekstern lenke">
            <label>Ekstern lenke</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="list_description" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/list_description</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="url" type="TextLine">
                    <label>URL</label>
                    <custom-text>contentdata/url</custom-text>
                    <help-text>Benytt fullstendig URL. Eksempelvis slik: http://www.nav.no</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="target" type="ComboBox">
                    <label>Ã…pne i</label>
                    <custom-text>contentdata/target</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="new">Nytt vindu</option>
                        <option value="current">Samme vindu</option>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Egenskaper">
            <label>Egenskaper</label>
            <items>
                <input name="emneord" type="ContentSelector">
                    <label>Emneord</label>
                    <custom-text>contentdata/emneord</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Emne</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
