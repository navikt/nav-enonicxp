<content-type>
    <display-name>Brukerstotte</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Generell informasjon">
            <label>Generell informasjon</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Kontaktinformasjon</label>
                    <custom-text>contentdata/title</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <item-set name="contacts">
            <label>Kontakter</label>
            <occurrences maximum="1" minimum="0"/>
            <items>
                <item-set name="contact">
                    <label>Kontakter</label>
                    <occurrences maximum="0" minimum="0"/>
                    <items>
                        <input name="name" type="TextLine">
                            <label>Navn</label>
                            <custom-text>name</custom-text>
                            <occurrences maximum="1" minimum="1"/>
                        </input>
                        <input name="info" type="TextLine">
                            <label>Infotekst</label>
                            <custom-text>info</custom-text>
                            <occurrences maximum="1" minimum="0"/>
                        </input>
                        <input name="phonenumber" type="TextLine">
                            <label>Telefonnummer</label>
                            <custom-text>phonenumber</custom-text>
                            <occurrences maximum="1" minimum="0"/>
                        </input>
                        <input name="email" type="TextLine">
                            <label>Epost eller URL</label>
                            <custom-text>email</custom-text>
                            <help-text>Alle URLer m√• starte med http. Epost adresser                     skrives som vanlig</help-text>
                            <occurrences maximum="1" minimum="0"/>
                        </input>
                    </items>
                </item-set>
            </items>
        </item-set>
    </form>
</content-type>
