<content-type>
    <display-name>Sprak</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Språk">
            <label>Språk</label>
            <items>
                <input name="language" type="TextLine">
                    <label>Språk (norsk)</label>
                    <custom-text>contentdata/language</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="original" type="TextLine">
                    <label>Språk (originalspråk)</label>
                    <custom-text>contentdata/original</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="code" type="TextLine">
                    <label>Språkkode (ISO 639-1)</label>
                    <custom-text>contentdata/code</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
