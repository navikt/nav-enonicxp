<content-type xmlns="urn:enonic:xp:model:1.0">
    <display-name>~Fallback-verdier for ikke-lokalisert innhold</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set>
            <label>Innholdstyper som skal kunne velges</label>
            <items>
                <input name="contentTypes" type="ContentTypeFilter">
                    <label>Velg innholdstyper</label>
                    <occurrences minimum="1" maximum="0"/>
                    <config>
                        <context>true</context>
                    </config>
                </input>
            </items>
        </field-set>
        <item-set name="items">
            <label>Oversettelser for ikke-lokalisert innhold</label>
            <occurrences minimum="0" maximum="0"/>
            <items>
                <input name="title" type="TextLine">
                    <label>Sidetittel</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input name="sortTitle" type="TextLine">
                    <label>Tittel for utlisting og sortering</label>
                    <help-text>Hvis tom benyttes sidetittel</help-text>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="ingress" type="TextLine">
                    <label>Ingress</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input name="externalProductUrl" type="TextLine">
                    <label>Overstyr URL</label>
                    <help-text>Dersom dette feltet er tomt vil det lenkes til norsk versjon</help-text>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="contentId" type="CustomSelector">
                    <label>Velg et ikke-lokalisert innhold</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <service>contentSelector</service>
                        <param value="contentTypes">
                            {data.contentTypes}
                        </param>
                        <param value="selectorQuery">inherit="CONTENT"</param>
                        <param value="sort">displayName ASC</param>
                    </config>
                </input>
                <input type="CheckBox" name="enabled">
                    <label>Aktiver oversettelse</label>
                    <help-text>MÃ¥ aktiveres dersom oversettelsen skal vises for dette innholdet</help-text>
                    <default>unchecked</default>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
