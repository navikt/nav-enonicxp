<content-type>
    <display-name>NVV-Nyhet</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Ekstern lenke">
            <label>Ekstern lenke</label>
            <items>
                <input name="text" type="HtmlArea">
                    <label>Artikkel</label>
                    <custom-text>contentdata/text</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="url" type="TextLine">
                    <label>URL</label>
                    <custom-text>contentdata/url</custom-text>
                    <help-text>Benytt fullstendig URL. Eksempelvis slik: http://www.nav.no</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="target" type="ComboBox">
                    <label>Ã…pne i</label>
                    <custom-text>contentdata/target</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="new">Nytt vindu</option>
                        <option value="current">Samme vindu</option>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
