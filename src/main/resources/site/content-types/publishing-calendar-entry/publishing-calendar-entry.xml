<content-type>
    <display-name>Kalenderhendelse</display-name>
    <description>Statistikk for publisering</description>
    <super-type>base:unstructured</super-type>
    <form>
        <field-set>
            <label>Kalenderhendelse</label>
            <items>
                <input type="TextArea" name="period">
                    <label>Periode</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="Date" name="date">
                    <label>Dato for publisering</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="ContentSelector" name="link">
                    <label>Lenke til relevant innhold</label>
                    <occurrences minimum="0" maximum="1"/>
                    <config>
                        <allowContentType>${app}:*</allowContentType>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
