<content-type>
    <display-name>Generisk side</display-name>
    <description>Side kun med ingress og brødtekst</description>
    <super-type>base:unstructured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <mixin name="ingress"/>
        <mixin name="meta-description"/>
        <input type="HtmlArea" name="text">
            <label>Brødtekst</label>
            <help-text>Brukes ved behov</help-text>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <include>Undo | Redo</include>
            </config>
        </input>
    </form>
</content-type>
