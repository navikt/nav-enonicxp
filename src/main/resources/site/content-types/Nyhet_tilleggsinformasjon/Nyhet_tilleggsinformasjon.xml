<content-type>
    <display-name>Nyhet_tilleggsinformasjon</display-name>
    <description>Egen innholdstype for "relatert innhold" til Nyhet_brukerportal da det per def ikke er en nyhet i seg selv. Muligjør filtrering og forskjellig visning (ref hjem-problematikk etter oppgradering til 4.4)</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Relatert innhold til nyhet">
            <label>Relatert innhold til nyhet</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel (norsk)</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="originaltitle" type="TextLine">
                    <label>Tittel (originalspråk)</label>
                    <custom-text>contentdata/originaltitle</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="hide_date" type="CheckBox">
                    <label>Skjul dato</label>
                    <custom-text>contentdata/hide_date</custom-text>
                    <help-text>Huk av hvis nyhet skal ha lang levetid, slik at innhold ikke virker utdatert</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="preface" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/preface</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="text" type="HtmlArea">
                    <label>Brødtekst</label>
                    <custom-text>contentdata/text</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <item-set name="images">
                    <label>Bilder</label>
                    <custom-text>contentdata/images</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <items>
                        <input name="image" type="ImageSelector">
                            <label>Image</label>
                            <custom-text>contentdata/images</custom-text>
                            <occurrences maximum="1" minimum="1"/>
                        </input>
                        <input name="text" type="TextArea">
                            <label>Image text</label>
                            <custom-text>contentdata/images</custom-text>
                            <occurrences maximum="1" minimum="0"/>
                        </input>
                    </items>
                </item-set>
            </items>
        </field-set>
        <item-set name="links">
            <label>Relaterte lenker</label>
            <occurrences maximum="1" minimum="0"/>
            <items>
                <item-set name="link">
                    <label>Relaterte lenker</label>
                    <occurrences maximum="0" minimum="0"/>
                    <items>
                        <input name="description" type="TextLine">
                            <label>Lenketekst</label>
                            <custom-text>description</custom-text>
                            <occurrences maximum="1" minimum="0"/>
                        </input>
                        <input name="contents" type="ContentSelector">
                            <label>Relatert innhold</label>
                            <custom-text>contentlink</custom-text>
                            <occurrences maximum="0" minimum="0"/>
                            <config>
                                <allow-content-type>no.nav.navno:Fil</allow-content-type>
                                <allow-content-type>no.nav.navno:Stor_tabell</allow-content-type>
                                <allow-content-type>no.nav.navno:Nyhet_Brukerportal</allow-content-type>
                                <allow-content-type>no.nav.navno:Artikkel_Brukerportal</allow-content-type>
                                <allow-content-type>no.nav.navno:Nyhet_Ansattportal</allow-content-type>
                                <allow-content-type>no.nav.navno:Artikkel_Ansattportal</allow-content-type>
                                <allow-content-type>no.nav.navno:Nyhet_tilleggsinformasjon</allow-content-type>
                                <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                                <allow-content-type>no.nav.navno:Kort_om</allow-content-type>
                                <allow-content-type>no.nav.navno:Rapport_handbok</allow-content-type>
                                <allow-content-type>no.nav.navno:TilbakemeldingTema</allow-content-type>
                                <allow-content-type>no.nav.navno:Kort_om_vedlegg</allow-content-type>
                                <allow-content-type>no.nav.navno:Ekstra_stor_tabell</allow-content-type>
                                <allow-content-type>no.nav.navno:Skjema_for_veileder</allow-content-type>
                                <allow-content-type>no.nav.navno:Skjema</allow-content-type>
                            </config>
                        </input>
                        <input name="destination" type="ComboBox">
                            <label>Åpne i</label>
                            <custom-text>target</custom-text>
                            <occurrences maximum="1" minimum="0"/>
                            <config>
                                <option value="current">Samme vindu</option>
                                <option value="new">Nytt vindu</option>
                            </config>
                        </input>
                    </items>
                </item-set>
            </items>
        </item-set>
        <field-set name="Faktaboks">
            <label>Faktaboks</label>
            <items>
                <input name="fact_placement" type="RadioButton">
                    <label>Faktaboksen skal plasseres</label>
                    <custom-text>contentdata/fact_placement</custom-text>
                    <help-text>For at faktaboksen skal vises MÅ et av alternativene velges.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="sidebar">i høyre kolonne</option>
                        <option value="maincol">under brødtekst i hovedkolonne</option>
                    </config>
                </input>
                <input name="fact" type="HtmlArea">
                    <label>Faktaboks</label>
                    <custom-text>contentdata/fact</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
