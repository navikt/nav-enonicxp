<content-type>
    <display-name>Produktside</display-name>
    <description>Produktside med navigasjonsmeny og dynamiske komponenter</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set>
            <label>Side-tittel</label>
            <items>
                <input type="TextLine" name="title">
                    <label>Sett side-tittel</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
            </items>
        </field-set>
        <field-set>
            <label>Produkt</label>
            <items>
                <input name="product" type="ContentSelector">
                    <label>Velg produkt som denne produktsiden tilhører</label>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <allowContentType>${app}:product-blob</allowContentType>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set>
            <label>URL</label>
            <items>
                <mixin name="custom-path-selector-required"/>
                <mixin name="external-product-url" />
            </items>
        </field-set>
        <field-set>
            <label>For internt søk</label>
            <items>
                <input type="TextArea" name="description">
                    <label>Oppsummering</label>
                    <help-text>Vises i søkeresultater, og i lenker fra gamle sidetyper. Bør være maks 240 tegn.
                    </help-text>
                </input>
                <mixin name="keywords"/>
            </items>
        </field-set>
        <mixin name="seo"/>
        <mixin name="decorator-toggles"/>
    </form>
</content-type>
