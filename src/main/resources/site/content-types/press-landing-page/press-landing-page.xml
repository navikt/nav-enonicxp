<content-type>
    <display-name>Landingsside for presse</display-name>
    <description>Side-type for pressevaktinfo, pressemeldinger etc</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
         <field-set>
            <label>Tittel og ingress</label>
            <items>
                <mixin name="page-header"/>
                <mixin name="ingress-required" />
            </items>
        </field-set>
        <field-set>
            <label>Pressevakt</label>
            <items>
                <input type="HtmlArea" name="pressCall">
                    <label>Informasjon om pressevakt</label>
                </input>
            </items>
        </field-set>
        <field-set>
            <label>Pressemeldinger og snarveier</label>
            <items>
                <input type="ContentSelector" name="pressNews">
                    <label>Innholdsliste for pressemeldinger</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <allowContentType>${app}:content-list</allowContentType>
                    </config>
                </input>
                <input type="ContentSelector" name="morePressNews">
                    <label>Flere pressemeldinger og nyheter</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <allowContentType>${app}:main-article</allowContentType>
                    </config>
                </input>
                
                <input type="ContentSelector" name="shortcuts">
                    <label>Innholdsliste for snarveier</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <allowContentType>${app}:content-list</allowContentType>
                    </config>
                </input>
            </items>
        </field-set>
        <mixin name="custom-path-selector-required"/>
        <mixin name="owner"/>
        <mixin name="managed-by"/>
        <mixin name="languages-legacy"/>
    </form>
</content-type>