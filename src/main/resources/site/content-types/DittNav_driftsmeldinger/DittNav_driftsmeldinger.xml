<content-type>
    <display-name>DittNav_driftsmeldinger</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Komponent">
            <label>Komponent</label>
            <items>
                <input name="name" type="TextLine">
                    <label>Navn</label>
                    <custom-text>contentdata/name</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="type" type="ComboBox">
                    <label>Type</label>
                    <custom-text>contentdata/type</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <option value="DRIFTSMELDING_COMPONENT">Driftsmelding komponent</option>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Meldinger">
            <label>Meldinger</label>
            <items>
                <input name="melding" type="ContentSelector">
                    <label>Melding</label>
                    <custom-text>contentdata/melding</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Driftsmelding</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
