<content-type>
    <display-name>skrivestotte_tekst</display-name>
    <description>Tekst for skrivestøtte. Inneholder en beskrivende overskrift, stikkord i form av tags, og fritekst.</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Overskrift">
            <label>Overskrift</label>
            <items>
                <input name="overskrift" type="TextLine">
                    <label>Overskrift</label>
                    <custom-text>contentdata/overskrift</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="Tags">
            <label>Tags</label>
            <items>
                <input name="tags" type="TextLine">
                    <label>Tags, skill med mellomrom</label>
                    <custom-text>contentdata/tags</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="innhold">
            <label>innhold</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="locale" type="ComboBox">
                    <label>Språk</label>
                    <custom-text>locale</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <option value="nb_NO">Norsk (Bokmål)</option>
                        <option value="nn_NO">Norsk (Nynorsk)</option>
                        <option value="se_NO">Samisk</option>
                        <option value="en_US">Engelsk</option>
                        <option value="de_DE">Tysk</option>
                        <option value="fr_FR">Fransk</option>
                        <option value="es_ES">Spansk</option>
                        <option value="pl_PL">Polsk</option>
                        <option value="ru_RU">Russisk</option>
                        <option value="ur">Urdu</option>
                    </config>
                </input>
                <input name="fritekst" type="TextArea">
                    <label>Fritekst</label>
                    <custom-text>fritekst</custom-text>
                    <help-text>Tekst som skal sendes til bruker. Det er mulig å bruke følgende placeholdere i teksten som byttes ut med faktiske verdier i Modia: [bruker.fnr], [bruker.fornavn], [bruker.etternavn], [bruker.navn], [bruker.navkontor], [saksbehandler.fornavn], [saksbehandler.etternavn], [saksbehandler.navn], [saksbehandler.enhet]</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
