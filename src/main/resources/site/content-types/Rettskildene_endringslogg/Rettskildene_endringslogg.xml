<content-type>
    <display-name>Rettskildene_endringslogg</display-name>
    <description>Endringsloggen brukes til Ã¥ vise hvilket innhold som er endret. Den styrer bl.a. forsiden og sorteringsordre.</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Title">
            <label>Title</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Title</label>
                    <custom-text>contentdata/title</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <item-set name="endring">
            <label>Endring</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="relatert_endring" type="ContentSelector">
                    <label>Innhold som er endret</label>
                    <custom-text>innholdsdel</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Rettskildene_artikkel</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_forskrift</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_kapittel</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_kapitteloversikt</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_lov</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_lovoversikt</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_legemiddelliste</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_paragraf</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_rundskriv</allow-content-type>
                        <allow-content-type>no.nav.navno:Rettskildene_vedlegg</allow-content-type>
                    </config>
                </input>
                <input name="dato" type="Date">
                    <label>Oppdatert dato</label>
                    <custom-text>updated_date</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="link_text" type="TextLine">
                    <label>Lenketekst</label>
                    <custom-text>link_text</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
