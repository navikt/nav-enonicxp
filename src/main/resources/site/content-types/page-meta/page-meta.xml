<content-type>
    <display-name>Metadata for sider</display-name>
    <description>Benyttes for å sette metadata for en side.</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <option-set name="contentType">
            <label>Type innhold</label>
            <occurrences minimum="1" maximum="1"/>
            <options minimum="1" maximum="1">
                <option name="product_page">
                    <label>Produktside</label>
                    <items>
                        <mixin name="audience" />
                        <mixin name="area" />
                        <mixin name="taxonomy" />
                        <mixin name="illustration" />
                        <mixin name="owner" />
                        <mixin name="managed-by" />
                        <mixin name="product-details-selector"/>
                        <mixin name="form-details-selector"/>
                        <mixin name="decorator-toggles"/>
                    </items>
                </option>
                <option name="situation_page">
                    <label>Situasjonsside</label>
                    <items>
                        <mixin name="audience" />
                        <mixin name="area" />
                        <mixin name="illustration" />
                        <mixin name="owner"/>
                        <mixin name="managed-by"/>
                        <mixin name="decorator-toggles"/>
                    </items>
                </option>
                <option name="tools_page">
                    <label>Verktøyside</label>
                    <items>
                        <mixin name="audience"/>
                        <input name="taxonomy" type="ComboBox">
                            <label>Kategorier</label>
                            <occurrences minimum="0" maximum="99"/>
                            <config>
                                <option value="calculator">Kalkulator</option>
                                <option value="navigator">Veiviser</option>
                            </config>
                        </input>
                        <mixin name="area"/>
                        <mixin name="illustration"/>
                        <mixin name="owner"/>
                        <mixin name="managed-by"/>
                    </items>
                </option>
                <option name="generic_page">
                    <label>Generisk side</label>
                    <items>
                        <mixin name="audience" />
                        <mixin name="illustration" />
                        <mixin name="decorator-toggles"/>
                    </items>
                </option>
                <option name="themed_article_page">
                    <label>Temaartikkel</label>
                    <items>
                        <mixin name="audience" />
                        <input name="taxonomy" type="ComboBox">
                            <label>Kategorier</label>
                            <occurrences minimum="0" maximum="0"/>
                            <config>
                                <option value="tips_job">Jobbsøkertips</option>
                                <option value="help_work">Hjelp til å komme i jobb</option>
                                <option value="when_sick">Når du er syk</option>
                                <option value="payment">Utbetaling</option>
                                <option value="complaint_rights">Klagerettigheter</option>
                                <option value="user_support">Brukerstøtte</option>
                                <option value="about_nav">Om NAV</option>
                                <option value="membership_national_insurance">Medlemskap i folketrygden</option>
                                <option value="recruitment">Rekruttering (for arbeidsgivere)</option>
                            </config>
                        </input>
                        <mixin name="area" />
                        <mixin name="illustration" />
                        <mixin name="owner"/>
                        <mixin name="managed-by"/>
                        <mixin name="product-details-selector"/>
                        <mixin name="decorator-toggles"/>
                    </items>
                </option>
                <option name="guide_page">
                    <label>Slik gjør du det</label>
                    <items>
                        <input type="CheckBox" name="hideFromProductlist">
                            <label>Ikke vis denne siden på oversiktssider (gjelder ikke skjemaoversikter)</label>
                            <default>unchecked</default>
                        </input>
                        <mixin name="audience" />
                        <mixin name="area" />
                        <mixin name="illustration" />
                        <mixin name="owner" />
                        <mixin name="managed-by" />
                        <mixin name="product-details-selector"/>
                        <mixin name="form-details-selector"/>
                        <mixin name="decorator-toggles"/>
                    </items>
                </option>
                <option name="current_topic_page">
                    <label>Aktuelt</label>
                    <items>
                        <input type="TextLine" name="title">
                            <label>Sett side-tittel</label>
                            <occurrences minimum="0" maximum="1"/>
                        </input>
                        <mixin name="audience" />
                        <mixin name="area" />
                        <mixin name="owner"/>
                        <mixin name="managed-by"/>
                        <mixin name="decorator-toggles"/>
                    </items>
                </option>
            </options>
        </option-set>
    </form>
</content-type>
