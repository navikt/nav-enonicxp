<content-type>
    <display-name>InnholdstypeForSBL</display-name>
    <description>Innholdstype for tekster og tekstbiter for Selvbetjeningsløsningene</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Innhold">
            <label>Innhold</label>
            <items>
                <input name="key" type="TextLine">
                    <label>Nøkkelverdi for innholdsbiten</label>
                    <custom-text>contentdata/key</custom-text>
                    <help-text>Her settes nøkkelverdien for innholdsbiten</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="value" type="TextArea">
                    <label>Den statiske innholdsbiten</label>
                    <custom-text>contentdata/value</custom-text>
                    <help-text>Her settes det statiske innholdet som skal vises i SBL</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Forklaring">
            <label>Forklaring</label>
            <items>
                <input name="description" type="TextArea">
                    <label>Forklaring for innholdsbit</label>
                    <custom-text>contentdata/description</custom-text>
                    <help-text>Dette feltet blir ikke publisert, men kan brukes internt som forklaring om hva innholdsbiten skal brukes til</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
