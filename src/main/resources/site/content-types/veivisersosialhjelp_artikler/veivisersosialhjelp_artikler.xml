<content-type>
    <display-name>veivisersosialhjelp_artikler</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Artikler">
            <label>Artikler</label>
            <items>
                <input name="bannertittel" type="TextLine">
                    <label>Bannertittel</label>
                    <custom-text>contentdata/bannertittel</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="tittel" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/tittel</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="ikon" type="ComboBox">
                    <label>Ikon</label>
                    <custom-text>contentdata/ikon</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <option value="barn">Barn</option>
                        <option value="enslig">Enslig forsørger</option>
                        <option value="samboer">Samboer</option>
                        <option value="gift">Gift</option>
                        <option value="gjeldsrådgivning">Gjeldsrådgivning</option>
                        <option value="veiledning">Veiledning</option>
                        <option value="akutt">Akutt situasjon</option>
                        <option value="sliksokerdu">Slik søker du</option>
                    </config>
                </input>
                <input name="rekkefolge" type="TextLine">
                    <label>Hvis ikke artikkel så legge inn rekkefølgenummer</label>
                    <custom-text>contentdata/rekkefolge</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="ingress" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/ingress</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="delartikkel">
            <label>delartikkel</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="deloverskrift" type="TextLine">
                    <label>Mellomoverskrift</label>
                    <custom-text>contentdata/deloverskrift</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="underoverskrift" type="TextLine">
                    <label>Trekkspilloverskrift</label>
                    <custom-text>contentdata/underoverskrift</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="innhold" type="HtmlArea">
                    <label>innhold</label>
                    <custom-text>contentdata/innhold</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
        <field-set name="Angi andre språkversjoner">
            <label>Angi andre språkversjoner</label>
            <items>
                <input name="languages" type="ContentSelector">
                    <label>Språkversjoner av denne artikkelen</label>
                    <custom-text>contentdata/languages</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:veivisersosialhjelp_artikler</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
