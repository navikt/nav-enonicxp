<content-type>
    <display-name>Feature toggle</display-name>
    <description>Aktiverer/deaktiverer features</description>
    <super-type>base:unstructured</super-type>
    <form>
        <field-set name="feature-toggle">
            <label>Feature toggle</label>
            <items>
                <input name="featureName" type="TextLine">
                    <label>Navn på feature</label>
                    <help-text>
                        Gyldige tegn: a-z og bindestrek
                    </help-text>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <regexp>^[a-z]+(-[a-z]+)*$</regexp>
                    </config>
                </input>
                <input name="toggle" type="CheckBox">
                    <label>Aktivér feature</label>
                </input>
                <input name="percentage" type="Long" min="0" max="100">
                    <label>Gradvis utrullering</label>
                    <help-text>
                        Prosentandel av brukere som denne feature'en skal være aktivert for
                    </help-text>
                    <default>100</default>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <min>0</min>
                        <max>100</max>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
