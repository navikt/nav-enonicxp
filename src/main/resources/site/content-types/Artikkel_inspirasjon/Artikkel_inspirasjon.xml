<content-type>
    <display-name>Artikkel_inspirasjon</display-name>
    <description>Artikkel tilpasset veileder-arbeidssøker</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Inspirasjonsartikkel til veiviseren">
            <label>Inspirasjonsartikkel til veiviseren</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="writer" type="TextLine">
                    <label>Tekstforfatter</label>
                    <custom-text>contentdata/writer</custom-text>
                    <help-text>Vises i tillegg til den som har publisert, eller endret innholdet</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="photographer" type="TextLine">
                    <label>Fotograf</label>
                    <custom-text>contentdata/photographer</custom-text>
                    <help-text>Fotograf</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="article">
            <label>Artikkelbilde</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="articleimage" type="ImageSelector">
                    <label>Bilde til artikkel</label>
                    <custom-text>contentdata/article/articleimage</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="text" type="HtmlArea">
                    <label>Brødtekst</label>
                    <custom-text>contentdata/article/text</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
