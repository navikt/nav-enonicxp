<content-type>
    <display-name>Idebanken_snarvei</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Snarvei">
            <label>Snarvei</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Overskrift</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="author" type="TextLine">
                    <label>Opphavsmann</label>
                    <custom-text>contentdata/author</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Lenke til side, eller innhold">
            <label>Lenke til side, eller innhold</label>
            <items>
                <input name="pageid" type="TextLine">
                    <label>Side-ID (for lenke til menypunkt)</label>
                    <custom-text>contentdata/pageid</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="related" type="ContentSelector">
                    <label>Lenke til innhold</label>
                    <custom-text>contentdata/related</custom-text>
                    <help-text>Velg bare et innhold</help-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Statisk_informasjon</allow-content-type>
                        <allow-content-type>no.nav.navno:Idebanken_artikkel</allow-content-type>
                        <allow-content-type>no.nav.navno:Idebanken_nyhet</allow-content-type>
                        <allow-content-type>no.nav.navno:Idebanken_virksomhetseksempel</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Tilleggsinformasjon - ikke påkrevd">
            <label>Tilleggsinformasjon - ikke påkrevd</label>
            <items>
                <input name="description" type="TextArea">
                    <label>Kort beskrivende tekst</label>
                    <custom-text>contentdata/description</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="link_text" type="TextLine">
                    <label>Lenketekst</label>
                    <custom-text>contentdata/link_text</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
