<content-type>
    <display-name>Forside</display-name>
    <description>Forside med navigasjon til omr책desider</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <mixin name="audience"/>
        <mixin name="illustration"/>
        <field-set>
            <label>Omr책de- eller situasjonsnavigasjon (skal fjernes!)</label>
            <items>
                <input name="areasHeader" type="TextLine">
                    <label>Overskrift for omr책denavigasjon</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="navigationRefs" type="ContentSelector">
                    <label>Velg utg책ende navigasjonlenker</label>
                    <help-text>Kortene blir presentert i henhold til type forside under seksjonen "Hva kan vi hjelpe deg med".</help-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allowContentType>${app}:area-page</allowContentType>
                        <allowContentType>${app}:front-page-nested</allowContentType>
                        <allowContentType>${app}:situation-page</allowContentType>
                        <allowContentType>${app}:overview</allowContentType>
                        <allowContentType>${app}:forms-overview</allowContentType>
                        <allowContentType>${app}:external-link</allowContentType>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set>
            <label>URL</label>
            <items>
                <mixin name="custom-path-selector-required"/>
                <mixin name="external-product-url"/>
            </items>
        </field-set>
        <mixin name="dynamic-page-common"/>
    </form>
</content-type>
