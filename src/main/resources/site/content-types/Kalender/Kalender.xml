<content-type>
    <display-name>Kalender</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Kalender">
            <label>Kalender</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/title</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="events" type="ContentSelector">
                    <label>Hendelser</label>
                    <custom-text>contentdata/events</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Hendelse</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
