<content-type>
    <display-name>Idebanken_verktoy</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Hovedfelt">
            <label>Hovedfelt</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Overskrift</label>
                    <custom-text>contentdata/title</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="image" type="ImageSelector">
                    <label>Ingressbilde</label>
                    <custom-text>contentdata/image</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="ingress" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/ingress</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="contents" type="ContentSelector">
                    <label>Relatert innhold</label>
                    <custom-text>contentdata/contents</custom-text>
                    <help-text>Legg kun til Ã©n lenke per faktaark. Hvis man legger inn flere, vil bare den fÃ¸rste lenken brukes.</help-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Fil</allow-content-type>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                        <allow-content-type>no.nav.navno:Idebanken_artikkel</allow-content-type>
                        <allow-content-type>no.nav.navno:Idebanken_virksomhetseksempel</allow-content-type>
                    </config>
                </input>
                <input name="origin" type="TextLine">
                    <label>Opphavskilde</label>
                    <custom-text>contentdata/origin</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="url" type="TextLine">
                    <label>URL til opphavskilde</label>
                    <custom-text>contentdata/url</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
