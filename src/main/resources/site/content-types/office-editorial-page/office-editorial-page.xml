<content-type>
    <display-name>Kontorside for redaktørinnhold</display-name>
    <description>Sidemal for redaktørdelen av kontorsidene. Denne skal kun benyttes én gang pr språk</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <option-set name="type">
            <label>Velg kontortype som denne skal vises på</label>
            <occurrences minimum="1" maximum="1"/>
            <options minimum="1" maximum="1">
                <option name="LOKAL"><label>Lokalkontor</label></option>  
                <option name="HMS">
                    <label>Hjelpemiddelsentral</label>
                    <items>
                        <input type="CustomSelector" name="hmsOffice">
                            <label>Velg hjelpemiddelsentral</label>
                            <occurrences minimum="1" maximum="1"/>
                            <config>
                                <service>contentSelector</service>
                                <param value="contentTypes">
                                    ["no.nav.navno:office-branch"]
                                </param>
                                <param value="selectorQuery">data.type="HMS"</param>
                                <param value="sort">data.area ASC, displayName ASC</param>
                            </config>
                        </input>
                    </items>
                </option>
                <option name="ALS"><label>Arbeidslivssenter</label></option>
                <option name="OPPFUTLAND"><label>NAV Utland og fellestjenester</label></option>
                <option name="FPY"><label>Saksbehandlingsenheter og styringsenheter (FPY)</label></option>
                <option name="YTA"><label>Saksbehandlingsenheter og styringsenheter (YTA)</label></option>
                <option name="KLAGE"><label>NAV Klageinstans</label></option>
                <option name="OKONOMI"><label>NAV Økonomi Stønad</label></option>
            </options>
        </option-set>
        <mixin name="dynamic-page-common"/>
    </form>
</content-type>
