<content-type>
    <display-name>Produktdetaljer</display-name>
    <description>Satser, saksbehandlingstider og utbetalingsdatoer</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="product-details">
            <label>Produktdetaljer</label>
            <items>
                <input name="detailType" type="ComboBox">
                    <label>Type produktdetaljer</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <option value="rates">Satser</option>
                        <option value="payout_dates">Utbetalingdatoer</option>
                        <option value="processing_times">Saksbehandlingstider</option>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
