<content-type>
    <display-name>Skjemadetaljer</display-name>
    <description>Søknad, skjema, klage og anke.</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="product-details">
            <label>Skjemadetaljer</label>
            <items>
                <option-set name="paddingSides">
                    <label>Skjemanummere</label>
                    <occurrences minimum="0" maximum="0"/>
                    <options minimum="1" maximum="1">
                        <option name="standard">
                            <label>Standard</label>
                            <default>true</default>
                        </option>
                        <option name="fullWidth">
                            <label>Full skjermbredde</label>
                        </option>
                        <option name="custom">
                            <label>Tilpasset</label>
                            <items>
                                <input type="Double" name="remValue">
                                    <label>(rem-enheter)</label>
                                </input>
                            </items>
                        </option>
                    </options>
                </option-set>
            </items>
        </field-set>
        <field-set>
            <label>Legg til andre språkversjoner</label>
            <items>
                <input name="languages" type="ContentSelector">
                    <label>Velg innhold for alternative språk</label>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allowContentType>${app}:product-details</allowContentType>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
