<content-type>
    <display-name>Skjemavedlegg</display-name>
    <description>For strekkodeark; selve vedlegget oppstår annetsteds</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Skjemainformasjon">
            <label>Skjemainformasjon</label>
            <items>
                <input name="name" type="TextLine">
                    <label>Skjemanavn</label>
                    <custom-text>contentdata/name</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="attachmentid" type="TextLine">
                    <label>Vedleggs-id</label>
                    <custom-text>contentdata/attachmentid</custom-text>
                    <help-text>To tegn bestående av bokstaver og tall. Settes en verdi her vil det komme i strekkoden på topparket til skjemainnsendelsen som vedlegget er en del av. Automatisk journalføring av vedlegg.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="id" type="TextLine">
                    <label>Skjema-id</label>
                    <custom-text>contentdata/id</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="description" type="TextArea">
                    <label>Skjemabeskrivelse</label>
                    <custom-text>contentdata/description</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="themes" type="ContentSelector">
                    <label>Emneord</label>
                    <custom-text>contentdata/themes</custom-text>
                    <help-text>Område på Navet og nav.no</help-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Emne</allow-content-type>
                    </config>
                </input>
                <input name="category" type="ContentSelector">
                    <label>Kategori</label>
                    <custom-text>contentdata/category</custom-text>
                    <help-text>Kategori for skjemaveileder</help-text>
                    <occurrences maximum="0" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Emne</allow-content-type>
                    </config>
                </input>
                <input name="unscannable" type="CheckBox">
                    <label>Skal ikke skannes</label>
                    <custom-text>contentdata/unscannable</custom-text>
                    <help-text>Huk av dersom vedlegget ikke er papirbasert og dermed ikke egner seg for skanning.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
