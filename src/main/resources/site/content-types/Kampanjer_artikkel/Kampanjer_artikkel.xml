<content-type>
    <display-name>Kampanjer_artikkel</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <item-set name="images">
            <label>Bilder</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="image" type="ImageSelector">
                    <label>Bilde</label>
                    <custom-text>image</custom-text>
                    <help-text>Bilde brukes hvis ikke film er angitt.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="caption" type="TextArea">
                    <label>Bildetekst</label>
                    <custom-text>caption</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
        <item-set name="movies">
            <label>Film</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="movie" type="TextLine">
                    <label>Film</label>
                    <custom-text>movie</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="moviecaption" type="TextArea">
                    <label>Bildetekst</label>
                    <custom-text>moviecaption</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
        <field-set name="Artikkeltekst">
            <label>Artikkeltekst</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="preface" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/preface</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="text" type="HtmlArea">
                    <label>Brødtekst</label>
                    <custom-text>contentdata/text</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <item-set name="teaser">
            <label>Teaser</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="image" type="ImageSelector">
                    <label>Ingressbilde</label>
                    <custom-text>contentdata/teaser/image</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="read_more" type="TextLine">
                    <label>Les mer</label>
                    <custom-text>contentdata/teaser/read_more</custom-text>
                    <help-text>Skriv inn en tekst som beskriver hva man kan lese mer om, f.eks. "Les mer om jobbsøking".</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </item-set>
        <field-set name="Relaterte artikler">
            <label>Relaterte artikler</label>
            <items>
                <input name="articleboxheading" type="TextLine">
                    <label>Overskrift</label>
                    <custom-text>contentdata/articleboxheading</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="articles" type="ContentSelector">
                    <label>Relaterte artikler</label>
                    <custom-text>contentdata/articles</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Kampanjer_artikkel</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Relaterte filer">
            <label>Relaterte filer</label>
            <items>
                <input name="attachmentboxheading" type="TextLine">
                    <label>Overskrift</label>
                    <custom-text>contentdata/attachmentboxheading</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="files" type="ContentSelector">
                    <label>Relaterte filer</label>
                    <custom-text>contentdata/files</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Fil</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Lenker til eksterne sider utenfor kampanjenettstedet">
            <label>Lenker til eksterne sider utenfor kampanjenettstedet</label>
            <items>
                <input name="linkboxheading" type="TextLine">
                    <label>Overskrift</label>
                    <custom-text>contentdata/linkboxheading</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="links" type="ContentSelector">
                    <label>Eksterne lenker</label>
                    <custom-text>contentdata/links</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Interne snarveier">
            <label>Interne snarveier</label>
            <items>
                <input name="shortcuts" type="ContentSelector">
                    <label>Relaterte snarveier</label>
                    <custom-text>contentdata/shortcuts</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Kampanjer_snarvei</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
