<content-type>
    <display-name>Skjema_fylkemottak</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Fylke">
            <label>Fylke</label>
            <items>
                <input name="fylke" type="TextLine">
                    <label>Fylkesnavn</label>
                    <custom-text>contentdata/fylke</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="number" type="TextLine">
                    <label>Fylkesnummer</label>
                    <custom-text>contentdata/number</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <item-set name="temamottak">
            <label>Skjemamottak for kategori</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="kategori" type="ContentSelector">
                    <label>Kategori</label>
                    <custom-text>kategori</custom-text>
                    <occurrences maximum="0" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Emne</allow-content-type>
                    </config>
                </input>
                <input name="mottak" type="ContentSelector">
                    <label>Skjemamottak</label>
                    <custom-text>mottak</custom-text>
                    <help-text>Enhet som skal ta i mot skjema for valgte kategorier for dette fylket. Dette gjelder kun skjema med fylkesmottak som ikke kan skannes:
                    </help-text>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <allow-content-type>no.nav.navno:Enhetsinformasjon</allow-content-type>
                    </config>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
