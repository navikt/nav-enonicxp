<content-type>
    <display-name>nav.rapporthandbok</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Generell informasjon">
            <label>Generell informasjon</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="preface" type="TextArea">
                    <label>Ingress for listevisning (vises kun på seksjonsside)</label>
                    <custom-text>contentdata/preface</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Kapitler (sider) som rapporthandboken består av">
            <label>Kapitler (sider) som rapporthandboken består av</label>
            <items>
                <input name="chapters" type="ContentSelector">
                    <label>Kapitler</label>
                    <custom-text>contentdata/chapters</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:nav.rapporthandbok.kap</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Språkversjoner">
            <label>Språkversjoner</label>
            <items>
                <input name="languages" type="ContentSelector">
                    <label>Språkversjoner av dette innholdet</label>
                    <custom-text>contentdata/languages</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:nav.rapporthandbok</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
