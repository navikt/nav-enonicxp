<content-type>
    <display-name>Innholdsliste</display-name>
    <description>Visning av Nyheter/Nyttig å vite/Snarveier</description>
    <super-type>base:unstructured</super-type>
    <form>
        <field-set>
            <label>Innholdsliste</label>
            <help-text>Innhold som skal vises i nyheter, snarveier, eller nyttig å vite i oppslagstavle</help-text>
            <items>
                <input name="sectionContents" type="ContentSelector">
                    <label>Velg innhold</label>
                    <allowPath>${site}/*</allowPath>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <showStatus>true</showStatus>
                        <allowContentType>${app}:main-article</allowContentType>
                        <allowContentType>${app}:main-article-chapter</allowContentType>
                        <allowContentType>${app}:internal-link</allowContentType>
                        <allowContentType>${app}:external-link</allowContentType>
                        <allowContentType>${app}:page-list</allowContentType>
                        <allowContentType>${app}:dynamic-page</allowContentType>
                        <allowContentType>${app}:content-page-with-sidemenus</allowContentType>
                        <allowContentType>${app}:situation-page</allowContentType>
                        <allowContentType>${app}:guide-page</allowContentType>
                        <allowContentType>${app}:tools-page</allowContentType>
                        <allowContentType>${app}:guide-page</allowContentType>
                        <allowContentType>${app}:current-topic-page</allowContentType>
                        <allowContentType>${app}:themed-article-page</allowContentType>
                        <allowContentType>${app}:overview</allowContentType>
                        <allowContentType>${app}:forms-overview</allowContentType>
                        <allowContentType>${app}:office-page</allowContentType>
                        <allowContentType>${app}:generic-page</allowContentType>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
