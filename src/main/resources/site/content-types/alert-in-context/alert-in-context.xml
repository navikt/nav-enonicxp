<content-type>
    <display-name>Varsel i kontekst</display-name>
    <description>Varsel til bruker i kontekst</description>
    <super-type>base:unstructured</super-type>
    <form>
        <field-set>
            <label>Redaksjonelt varsel</label>
            <items>
                <input name="type" type="RadioButton">
                    <label>Type</label>
                    <config>
                        <option value="critical">Kritisk informasjon</option>
                        <option value="information">Viktig informasjon</option>
                    </config>
                    <default>information</default>
                </input>
                <input type="TextArea" name="text">
                    <label>Varselmelding</label>
                    <help-text>Kort og konsis meldingstekst</help-text>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="ContentSelector" name="targetContent">
                    <label>Velg sider og innhold hvor varselet skal vises</label>
                    <occurrences minimum="1" maximum="0" />
                    <config>
                        <allowContentType>${app}:content-page-with-sidemenus</allowContentType>
                        <allowContentType>${app}:situation-page</allowContentType>
                        <allowContentType>${app}:guide-page</allowContentType>
                        <allowContentType>${app}:tools-page</allowContentType>
                        <allowContentType>${app}:guide-page</allowContentType>
                        <allowContentType>${app}:themed-article-page</allowContentType>
                        <allowContentType>${app}:overview</allowContentType>
                        <allowContentType>${app}:forms-overview</allowContentType>
                        <allowContentType>${app}:form-details</allowContentType>
                        <allowContentType>${app}:product-details</allowContentType>
                        <hideToggleIcon>true</hideToggleIcon>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
