<content-type>
    <display-name>Nedtrekksliste</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="LinkerNedtrekksliste">
            <label>LinkerNedtrekksliste</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="firstioption" type="TextLine">
                    <label>Valgtekst</label>
                    <custom-text>contentdata/firstioption</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <item-set name="options">
            <label>Linker</label>
            <occurrences maximum="1" minimum="0"/>
            <items>
                <item-set name="option">
                    <label>Linker</label>
                    <occurrences maximum="0" minimum="0"/>
                    <items>
                        <input name="description" type="TextLine">
                            <label>Lenketekst</label>
                            <custom-text>description</custom-text>
                            <occurrences maximum="1" minimum="1"/>
                        </input>
                        <input name="linkdescription" type="TextLine">
                            <label>value</label>
                            <custom-text>value</custom-text>
                            <occurrences maximum="1" minimum="1"/>
                        </input>
                        <input name="destination" type="ComboBox">
                            <label>Ã…pne i</label>
                            <custom-text>target</custom-text>
                            <occurrences maximum="1" minimum="0"/>
                            <config>
                                <option value="new">Nytt vindu</option>
                                <option value="current">Samme vindu</option>
                            </config>
                        </input>
                    </items>
                </item-set>
            </items>
        </item-set>
    </form>
</content-type>
