<content-type>
    <display-name>Illustrasjon</display-name>
    <description>Ikoner med mouseover animasjon</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <item-set name="icons">
            <label>Velg ikoner</label>
            <occurrences minimum="3" maximum="0"/>
            <items>
                <mixin name="icon-selector"/>
            </items>
        </item-set>
        <field-set>
            <label>Lottie-files (animasjon)</label>
            <help-text>Dersom du laster opp en lottie-fil s√• vil denne vises istedet for statisk illustrasjon</help-text>
            <items>
                <input name="lottieHover" type="MediaSelector">
                    <label>Lottie-animasjon ved hover</label>
                    <config>
                        <allowContentType>media:code</allowContentType>
                        <allowPath>./*.json</allowPath>
                        <hideToggleIcon>true</hideToggleIcon>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
