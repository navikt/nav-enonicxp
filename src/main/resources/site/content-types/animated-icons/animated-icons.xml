<content-type>
    <display-name>Illustrasjon</display-name>
    <description>Ikoner med mouseover animasjon</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <item-set name="icons">
            <label>Velg ikoner</label>
            <occurrences minimum="3" maximum="0"/>
            <items>
                <mixin name="icon-selector"/>
                <field-set>
                    <label>Animasjon</label>
                    <items>
                        <input name="transformStart" type="TextLine">
                            <label>Start-transformasjon</label>
                        </input>
                        <input name="transformEnd" type="TextLine">
                            <label>Slutt-transformasjon</label>
                        </input>
                        <input name="transformOrigin" type="TextLine">
                            <label>Origo</label>
                            <default>center</default>
                        </input>
                    </items>
                </field-set>
            </items>
        </item-set>
        <field-set>
            <label>Lottie-files (animasjon)</label>
            <help-text>Dersom du laster opp en lottie-fil s√• vil denne vises istedet for statisk illustrasjon</help-text>
            <items>
                <input name="lottieHover" type="AttachmentUploader">
                    <label>Lottie-animasjon ved hover</label>
                </input>
                <input name="lottieActive" type="AttachmentUploader">
                    <label>Lottieanimasjon ved klikk (active)</label>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
