<content-type>
    <display-name>Kvalsys_retningslinje_NY</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Retningslinje">
            <label>Retningslinje</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <field-set name="Retningslinjeinnhold">
            <label>Retningslinjeinnhold</label>
            <items>
                <input name="content" type="HtmlArea">
                    <label>Innhold</label>
                    <custom-text>contentdata/content</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Støttemateriale">
            <label>Støttemateriale</label>
            <items>
                <input name="resources" type="ContentSelector">
                    <label>Lenker og systemstøtte</label>
                    <custom-text>contentdata/resources</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:Kvalsys_aktivitet_NY</allow-content-type>
                        <allow-content-type>no.nav.navno:Kvalsys_sjekkliste_NY</allow-content-type>
                        <allow-content-type>no.nav.navno:Kvalsys_retningslinje_NY</allow-content-type>
                        <allow-content-type>no.nav.navno:Kvalsys_systemstotte_NY</allow-content-type>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
