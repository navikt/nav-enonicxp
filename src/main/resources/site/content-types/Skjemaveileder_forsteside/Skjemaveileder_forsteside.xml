<content-type>
    <display-name>Skjemaveileder_forsteside</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Skjemaoverskrift">
            <label>Skjemaoverskrift</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="type" type="RadioButton">
                    <label>Type førstesideark</label>
                    <custom-text>contentdata/type</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <option value="arbeidsgiver">Arbeidsgiver/Privatperson</option>
                        <option value="annenpost">Annen post/Klage</option>
                        <option value="ettersendelse">Ettersendelse</option>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="Generelle tekster">
            <label>Generelle tekster</label>
            <items>
                <input name="pdfHeading" type="TextLine">
                    <label>Overskrift</label>
                    <custom-text>contentdata/pdfHeading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="ingress" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/ingress</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Med vedlegg">
            <label>Med vedlegg</label>
            <items>
                <input name="withAttachDesc" type="TextLine">
                    <label>Med vedlegg beskrivelse</label>
                    <custom-text>contentdata/withAttachDesc</custom-text>
                    <help-text>Tekst som vises over listen med vedlegg for skjemaet, i fet skrift</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="withAttachDo" type="TextLine">
                    <label>Slik gjør du overskrift</label>
                    <custom-text>contentdata/withAttachDo</custom-text>
                    <help-text>Vises i fet skrift over punktliste</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="withAttachBullets" type="TextArea">
                    <label>Punktliste for vedlegg</label>
                    <custom-text>contentdata/withAttachBullets</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="withAttachEnding" type="TextArea">
                    <label>Avslutningstekst</label>
                    <custom-text>contentdata/withAttachEnding</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Uten vedlegg">
            <label>Uten vedlegg</label>
            <items>
                <input name="withoutAttachDo" type="TextLine">
                    <label>Slik gjør du overskrift</label>
                    <custom-text>contentdata/withoutAttachDo</custom-text>
                    <help-text>Vises i fet skrift over punktliste</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="withoutAttachBullets" type="TextArea">
                    <label>Punktliste for vedlegg</label>
                    <custom-text>contentdata/withoutAttachBullets</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
