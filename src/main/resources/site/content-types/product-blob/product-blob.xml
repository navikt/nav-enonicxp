<content-type xmlns="urn:enonic:xp:model:1.0">
    <display-name>Meta-data (produkt)</display-name>
    <description>Meta-data for produkt eller tjeneste fra NAV</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set>
            <label>Produktdata</label>
            <items>
                <mixin name="audience"/>
                <mixin name="area"/>
                <mixin name="illustration"/>
                <option-set name="contentCategory">
                    <label>Innholdstype og kategorier</label>
                    <occurrences minimum="1" maximum="1"/>
                    <options minimum="1" maximum="1">
                        <option name="product-page">
                            <label>Produktside</label>
                            <items>
                                <input name="taxonomy" type="ComboBox">
                                    <label>Kategorier</label>
                                    <occurrences minimum="0" maximum="0"/>
                                    <config>
                                        <option value="assistive_tools">Hjelpemiddel</option>
                                        <option value="followup">Oppfølging</option>
                                        <option value="benefits">Pengestøtte</option>
                                        <option value="measures">Tiltak</option>
                                        <option value="service">Tjeneste</option>
                                        <option value="rights">Veiledning</option>
                                        <option value="for_employers">For arbeidsgivere</option>
                                        <option value="for_providers">For samarbeidspartnere</option>
                                        <option value="for_municipality">For kommunen</option>
                                        <option value="for_event_organizers">For tiltaksarrangører</option>
                                        <option value="for_health_service">For leger og andre behandlere</option>
                                    </config>
                                </input>
                            </items>
                        </option>
                        <option name="themed-article-page">
                            <label>Temaartikkel</label>
                            <items>
                                <input name="taxonomy" type="ComboBox">
                                    <label>Kategorier</label>
                                    <occurrences minimum="0" maximum="0"/>
                                    <config>
                                        <option value="tips_job">Jobbsøkertips</option>
                                        <option value="help_work">Hjelp til å komme i jobb</option>
                                        <option value="when_sick">Når du er syk</option>
                                        <option value="payment">Utbetaling</option>
                                        <option value="complaint_rights">Klagerettigheter</option>
                                        <option value="user_support">Brukerstøtte</option>
                                        <option value="about_nav">Om NAV</option>
                                        <option value="membership_national_insurance">Medlemskap i folketrygden</option>
                                        <option value="recruitment">Rekruttering (for arbeidsgivere)</option>
                                    </config>
                                </input>
                            </items>
                        </option>
                        <option name="guide-page">
                            <label>Guide ("Slik gjør du")</label>
                        </option>
                    </options>
                </option-set>
            </items>
        </field-set>
        <mixin name="owner"/>
        <field-set>
            <label>Søknadsgreier goes here</label>
            <items>
                <input type="RadioButton" name="dummy">
                    <label>Items goes here</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
        </field-set>
        <field-set>
            <label>Innhold (lokalisert)</label>
            <items>
                <item-set name="contentNo">
                    <label>Norsk bokmål</label>
                    <occurrences maximum="1" minimum="0"/>
                    <items>
                        <field-set>
                            <label>Produktnavn og ingress</label>
                            <items>
                                <input name="title" type="TextLine">
                                    <label>Produktnavn</label>
                                    <help-text>Vises på oversiktssider og i produktkort</help-text>
                                    <occurrences maximum="1" minimum="1"/>
                                </input>
                                <input name="ingress" type="TextArea">
                                    <label>Ingress</label>
                                    <help-text>Vises i produktkort</help-text>
                                    <occurrences maximum="1" minimum="1"/>
                                </input>
                            </items>
                        </field-set>
                        <field-set>
                            <label>Produktside</label>
                            <items>
                                <input name="productPage" type="CustomSelector">
                                    <label>Velg produktside</label>
                                    <config>
                                        <service>contentSelector</service>
                                        <param value="selectorQuery">language="no" AND data.product="{_id}" AND
                                            type="no.nav.navno:{data.contentCategory._selected}"
                                        </param>
                                    </config>
                                </input>
                                <input name="altPage" type="ContentSelector">
                                    <label>Lenke til annen side</label>
                                    <help-text>Skal kun settes dersom produktside ikke er tilgjengelig på dette språket, eller produktsiden finnes utenfor Enonic</help-text>
                                    <config>
                                        <showStatus>true</showStatus>
                                        <allowContentType>${app}:external-link</allowContentType>
                                        <allowContentType>${app}:main-article</allowContentType>
                                        <allowContentType>${app}:main-article-chapter</allowContentType>
                                        <allowContentType>${app}:page-list</allowContentType>
                                    </config>
                                </input>
                            </items>
                        </field-set>
                        <field-set>
                            <label>Produktdetaljer</label>
                            <items>
                                <input name="processing_times" type="CustomSelector">
                                    <label>Saksbehandlingstider</label>
                                    <config>
                                        <service>contentSelector</service>
                                        <param value="contentTypes">no.nav.navno:product-details</param>
                                        <param value="selectorQuery">language="no" AND
                                            data.detailType="processing_times"
                                        </param>
                                    </config>
                                </input>
                                <input name="payout_dates" type="CustomSelector">
                                    <label>Utbetalingsdatoer</label>
                                    <config>
                                        <service>contentSelector</service>
                                        <param value="contentTypes">no.nav.navno:product-details</param>
                                        <param value="selectorQuery">language="no" AND data.detailType="payout_dates"
                                        </param>
                                    </config>
                                </input>
                                <input name="rates" type="CustomSelector">
                                    <label>Satser</label>
                                    <config>
                                        <service>contentSelector</service>
                                        <param value="contentTypes">no.nav.navno:product-details</param>
                                        <param value="selectorQuery">language="no" AND data.detailType="rates"</param>
                                    </config>
                                </input>
                            </items>
                        </field-set>
                    </items>
                </item-set>
                <item-set name="contentNn">
