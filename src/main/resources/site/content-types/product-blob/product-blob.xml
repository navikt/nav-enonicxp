                                        <param value="selectorQuery">language="nn" AND data.detailType="rates"</param>
                                    </config>
                                </input>
                            </items>
                        </field-set>
                    </items>
                </item-set>
                <item-set name="contentEn">
                    <label>Engelsk</label>
                    <occurrences maximum="1" minimum="0"/>
                    <items>
                        <field-set>
                            <label>Produktnavn og ingress</label>
                            <items>
                                <input name="title" type="TextLine">
                                    <label>Produktnavn</label>
                                    <help-text>Vises på oversiktssider og produktkort</help-text>
