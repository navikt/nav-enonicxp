<content-type>
    <display-name>Melding</display-name>
    <description>Driftsmelding</description>
    <super-type>base:unstructured</super-type>
    <form>
        <field-set name="melding">
            <label>Melding</label>
            <items>
                <input name="exposureLevel" type="RadioButton">
                    <label>Hvor skal meldingen vises?</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <option value="site">På nettsidene NAV.no</option>
                    </config>
                    <default>site</default>
                </input>
                <input name="type" type="RadioButton">
                    <label>Type</label>
                    <config>
                        <option value="prodstatus">Kritisk driftsmelding</option>
                        <option value="info">Viktig informasjon</option>
                    </config>
                    <default>prodstatus</default>
                </input>
                <input name="showDescription" type="CheckBox">
                    <label>Vis ingress</label>
                    <help-text>Kryss av for å vise ingressen</help-text>
                </input>
                <mixin name="ingress"/>
                <input name="showUpdated" type="CheckBox">
                    <label>Vis oppdateringstidspunkt</label>
                    <help-text>Kryss av for å vise oppdateringstidspunktet</help-text>
                </input>
                <input type="HtmlArea" name="text">
                    <label>Brødtekst melding</label>
                    <help-text>Kort og konsis meldingstekst</help-text>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
