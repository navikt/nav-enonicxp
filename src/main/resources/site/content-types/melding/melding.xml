<content-type>
    <display-name>Melding</display-name>
    <description>Driftsmelding</description>
    <super-type>base:unstructured</super-type>
    <form>
        <field-set>
            <label>Melding</label>
            <items>
                <input name="type" type="RadioButton">
                    <label>Type</label>
                    <config>
                        <option value="prodstatus">Kritisk driftsmelding</option>
                        <option value="info">Viktig informasjon</option>
                    </config>
                    <default>prodstatus</default>
                </input>
                <mixin name="ingress"/>
                <input type="HtmlArea" name="text">
                    <label>Brødtekst melding</label>
                    <help-text>Kort og konsis meldingstekst</help-text>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <option-set name="urlscope">
                    <label>Visning</label>
                    <occurrences minimum="1" maximum="1"/>
                    <options minimum="1" maximum="1">
                        <option name="global">
                            <label>Vises på alle sider</label>
                            <default>true</default>
                        </option>
                        <option name="scoped">
                            <label>Vises kun på bestemte URL'er</label>
                            <help-text>Eksempel: https://www.nav.no/no/arbeid vil vises på /no/arbeid og alle undersider</help-text>
                            <items>
                                <input type="TextLine" name="urls">
                                    <label>URL</label>
                                    <occurrences minimum="0" maximum="0"/>
                                    <default>https://www.nav.no/</default>
                                    <config>
                                        <regexp>^https:\/\/([a-z0-9_\-.]*\.)*nav\.no($|\/).*</regexp>
                                    </config>
                                </input>
                            </items>
                        </option>
                    </options>
                </option-set>
            </items>
        </field-set>
    </form>
</content-type>
