<content-type>
    <display-name>Global verdi</display-name>
    <description>Verdier som kan benyttes i tekster eller kalkulatorer</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <item-set name="valueItems">
            <label>Global verdi</label>
            <occurrences minimum="1" maximum="1"/>
            <items>
                <input name="numberValue" type="TextLine">
                    <label>Skriv inn en tallverdi</label>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <regexp>^([0-9]+)$</regexp>
                    </config>
                </input>
            </items>
        </item-set>
        <input name="description" type="TextArea">
            <label>Beskrivelse (vises ikke for bruker)</label>
        </input>
    </form>
</content-type>
