<content-type>
    <display-name>ufr.banner</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Banner">
            <label>Banner</label>
            <items>
                <input name="heading" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>contentdata/heading</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="image" type="ImageSelector">
                    <label>Bilde</label>
                    <custom-text>contentdata/image</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="mobile_image" type="ImageSelector">
                    <label>Bilde til mobil</label>
                    <custom-text>contentdata/mobile_image</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="svgstring" type="TextLine">
                    <label>SVG i minimert tekst (base64)</label>
                    <custom-text>contentdata/svgstring</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Lenke - gjÃ¸r banneret klikkbart">
            <label>Lenke - gjÃ¸r banneret klikkbart</label>
            <items>
                <input name="link" type="ContentSelector">
                    <label>Lenke</label>
                    <custom-text>contentdata/link</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:ufr.artikkel</allow-content-type>
                        <allow-content-type>no.nav.navno:ufr.sidebeskrivelse</allow-content-type>
                        <allow-content-type>no.nav.navno:Ekstern_lenke</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
