<content-type>
    <display-name>Artikkel - Hovedartikkel</display-name>
    <super-type>base:unstructured</super-type>
    <form>
        <field-set name="article">
            <label>Artikkelen</label>
            <items>
                <input type="TextLine" name="heading">
                    <label>Tittel</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input name="originaltitle" type="TextArea">
                    <label>Orginal tittel</label>
                </input>
                <input name="ingress" type="TextArea">
                    <label>Ingress</label>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input type="HtmlArea" name="text">
                    <label>Artikkelinnhold</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="RadioButton" name="hasTableOfContents">
                    <label>Sett inn innholdsfortegnelse</label>
                    <config>
                        <option value="none">Ingen</option>
                        <option value="h2">Kun h2-tag</option>
                        <option value="h3">h2-tagger med h3-tagger som underelementer</option>
                    </config>
                    <default>none</default>
                </input>
                <input type="RadioButton" name="tilbakemelding">
                    <label>Vis tilbakemelding</label>
                    <config>
                        <option value="true">Ja</option>
                        <option value="false">Nei</option>
                        <option value="">Ingen </option>
                    </config>
                </input>
                <field-set name="priority">
                    <label>Velg prioritet</label>
                    <help-text>Hvordan skal dette innholdet frontes på oppslagstavle, hopp over hvis den ikke skal med</help-text>
                    <items>
                        <field-set name="table">
                            <label>Oppslagstavle</label>
                            <items>
                                <input type="Long" name="tablePriority">
                                    <label>Velg prioritet</label>
                                </input>
                                <input type="RadioButton" name="icon">
                                    <label>Velg ikon for tavleoppføring</label>
                                    <config>
                                        <option value="icon-document">Dokument</option>
                                        <option value="icon-application">Selvbetjening</option>
                                        <option value="icon-padlock">Innloggingstjeneste</option>
                                    </config>
                                    <default>icon-document</default>
                                </input>
                            </items>
                        </field-set>
                        <field-set name="ntk">
                            <label>Nyttig å vite</label>
                            <items>
                                <input type="Long" name="ntkPriority">
                                    <label>Velg prioritet</label>
                                </input>
                            </items>
                        </field-set>
                        <field-set name="news">
                            <label>Nyheter</label>
                            <items>
                                <input name="newsPriority" type="RadioButton">
                                    <label>Være med basert på dato?</label>
                                    <config>
                                        <option value="true">Ja</option>
                                        <option value="false">Nei</option>
                                    </config>
                                    <default>false</default>
                                </input>
                            </items>
                        </field-set>
                        <field-set name="shortcut">
                            <label>Snarveier</label>
                            <items>
                                <input name="scPriority" type="Long">
                                    <label>Velg prioritet</label>
                                </input>
                            </items>
                        </field-set>
                    </items>
                </field-set>
            </items>
        </field-set>
        <field-set name="Angi andre språkversjoner">
            <label>Angi andre språkversjoner</label>
            <items>
                <input name="languages" type="ContentSelector">
                    <label>Andre språkversjoner av dette innholdet</label>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:main-article</allow-content-type>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="facts">
            <label>Faktaboks</label>
            <items>
                <input name="fact" type="HtmlArea">
                    <label>Faktaboks</label>
                    <occurrences minimum="0" maximum="0"/>
                </input>
                <input name="factLocation" type="RadioButton">
                    <label>Plassering av faktaboks</label>
                    <config>
                        <option value="right">Til høyre for artikkelen</option>
                        <option value="left">Til venstre for artikkelen</option>
                        <option value="bottom">I bunnen av artikkelen</option>
                        <option value="top">I toppen av artikkelen</option>
                        <option value="">Ingen</option>
                    </config>
                </input>
            </items>
        </field-set>
        <field-set name="media">
            <label>Legg til filer eller bilder</label>
            <items>

            <input name="image" type="ImageSelector">
                <label>Bilde</label>
                <occurrences minimum="0" maximum="0"/>
            </input>
            <input name="imagesize" type="RadioButton">
                <label>Velg størrelse</label>
                <config>
                    <option value="100">100%</option>
                    <option value="70">70%</option>
                    <option value="40">40%</option>
                    <option value="">Ingen</option>
                </config>
            </input>
            <input name="caption" type="TextLine">
                <label>Bildetekst</label>
            </input>
            <input type="AttachmentUploader" name="video">
                <occurrences minimum="0" maximum="0"/>
                <label>Legg ved filer</label>
            </input>
            </items>
        </field-set>

            <item-set name="menuListItems">
                <label>Menylisteoppføringer</label>
                <items>
                    <input name="menuListName" type="TextLine">
                        <label>Navn på listeoppføring</label>
                    </input>
                    <input type="HtmlArea" name="text">
                        <label>Tekstbasert innhold</label>
                        <occurrences minimum="0" maximum="0"/>
                    </input>
                    <input type="ContentSelector" name="link">
                        <label>Linker til innhold</label>
                        <occurrences maximum="0" minimum="0"/>
                    </input>
                </items>
                <occurrences minimum="0" maximum="0"/>
            </item-set>
        <field-set name="socialSharing">
            <label>Velg sosial deling</label>
            <items>
                <input name="social" type="ComboBox">
                    <label>Sosial deling</label>
                    <config>
                        <option value="twitter">Twitter</option>
                        <option value="facebook">Facebook</option>
                        <option value="linkedin">LinkedIn</option>
                    </config>
                    <occurrences minimum="0" maximum="0" />
                </input>
            </items>
        </field-set>
        <field-set name="listPart">
            <label>Del av navngitt lenkeliste</label>
            <items>
                <input name="name" type="TextLine">
                    <label>Navn på lenkeliste</label>
                    <help-text>Hvis dette elementet er en del av en større helhet, skal navnet være lik helheten</help-text>
                </input>
            </items>
        </field-set>
        <field-set name="meta">
            <label>Metadata</label>
            <items>
                <input name="metaTags" type="Tag">
                <label>Meta-tagger for innhold. Er automatisert</label>
                <occurrences maximum="0" minimum="0"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>