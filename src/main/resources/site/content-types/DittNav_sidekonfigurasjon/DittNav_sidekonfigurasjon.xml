<content-type>
    <display-name>DittNav_sidekonfigurasjon</display-name>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set name="Side">
            <label>Side</label>
            <items>
                <input name="name" type="TextLine">
                    <label>Navn</label>
                    <custom-text>contentdata/name</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
                <input name="type" type="ComboBox">
                    <label>Type</label>
                    <custom-text>contentdata/type</custom-text>
                    <occurrences maximum="1" minimum="1"/>
                    <config>
                        <option value="OversiktsPage">Oversiktside</option>
                        <option value="Forside">Forside</option>
                        <option value="DinFamilie">Din Familie</option>
                        <option value="Arbeidsgiver">Arbeidsgiver</option>
                        <option value="LoginPage">Innloggingsside</option>
                        <option value="LoginPageMulti">Innloggingsside med flere valg</option>
                        <option value="Arbeidstjenester">Arbeidstjenester</option>
                    </config>
                </input>
                <input name="applies_to" type="TextLine">
                    <label>Gjelder for</label>
                    <custom-text>contentdata/applies_to</custom-text>
                    <help-text>Uttrykk i EL som definerer hvilke brukerstatuser siden skal gjelde for.</help-text>
                    <occurrences maximum="1" minimum="1"/>
                </input>
            </items>
        </field-set>
        <item-set name="panel">
            <label>Panel</label>
            <occurrences maximum="0" minimum="0"/>
            <items>
                <input name="title" type="TextLine">
                    <label>Tittel</label>
                    <custom-text>title</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="location" type="ComboBox">
                    <label>Plassering</label>
                    <custom-text>location</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="center">Midterste kolonne</option>
                        <option value="right">Høyre kolonne</option>
                    </config>
                </input>
                <input name="containertype" type="ComboBox">
                    <label>Dekorasjon</label>
                    <custom-text>containertype</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                    <config>
                        <option value="CenterContainer">Vanlig</option>
                        <option value="HiddenMessagesContainer">Skjulte meldinger</option>
                        <option value="LoginContainer">Innlogging</option>
                        <option value="LoginContainerGray">Innlogging grå</option>
                        <option value="InfoBorder">Informasjon</option>
                        <option value="NoBorderContainer">Uten rammer</option>
                    </config>
                </input>
                <input name="applies_to_panel" type="TextLine">
                    <label>Gjelder for</label>
                    <custom-text>applies_to_panel</custom-text>
                    <help-text>Uttrykk i EL som definerer hvilke brukerstatuser siden skal gjelde for.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="component" type="ContentSelector">
                    <label>Komponent</label>
                    <custom-text>component</custom-text>
                    <occurrences maximum="0" minimum="0"/>
                    <config>
                        <allow-content-type>no.nav.navno:DittNav_komponentkonfigurasjon</allow-content-type>
                        <allow-content-type>no.nav.navno:DittNav_driftsmeldinger</allow-content-type>
                    </config>
                </input>
            </items>
        </item-set>
    </form>
</content-type>
