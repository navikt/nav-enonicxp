<content-type>
    <display-name>Video</display-name>
    <description>Video med metadata og diverse informasjon</description>
    <super-type>base:structured</super-type>
    <is-abstract>false</is-abstract>
    <is-final>true</is-final>
    <allow-child-content>true</allow-child-content>
    <form>
        <field-set>
            <label>Video metadata</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Videotittel</label>
                    <occurrences minimum="1" maximum="1" />
                </input>
                <input name="poster" type="ImageSelector">
                    <label>Bildeplakat</label>
                    <occurrences minimum="0" maximum="1" />
                    <config>
                        <allowPath>./*</allowPath>
                        <treeMode>false</treeMode>
                        <hideToggleIcon>true</hideToggleIcon>
                    </config>
                </input>
                <input name="duration" type="TextLine">
                    <label>Spilletid i sekunder</label>
                    <occurrences minimum="1" maximum="1" />
                </input>
                <input name="accountId" type="Long">
                    <label>Konto-id</label>
                    <occurrences minimum="1" maximum="1" />
                    <default>763558</default>
                </input>
                <input name="mediaId" type="TextLine">
                    <label>Media id</label>
                    <help-text>For eksempel ddf118c6-00015227-86825a7e</help-text>
                    <occurrences minimum="1" maximum="1" />
                    <!-- <config>
                        <regexp>^[0-9a-fA-F]{8}\b-[0-9a-fA-F]{8}\b-[0-9a-fA-F]{8}$</regexp>
                    </config> -->
                </input>
            </items>
        </field-set>
    </form>
</content-type>