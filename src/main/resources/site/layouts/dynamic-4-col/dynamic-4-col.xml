<layout>
    <display-name>Fast kolonne-layout - 4 kolonner</display-name>
    <description>Fire faste kolonner med valgfri bredde-fordeling</description>
    <form>
        <input type="TextArea" name="distribution">
            <label>Bredde-fordeling</label>
            <default>25-25-25-25</default>
        </input>
        <mixin name="layouts-common"/>
    </form>
    <regions>
        <region name="dynamic-1"/>
        <region name="dynamic-2"/>
        <region name="dynamic-3"/>
        <region name="dynamic-4"/>
    </regions>
</layout>
