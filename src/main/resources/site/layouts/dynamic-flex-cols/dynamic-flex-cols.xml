<layout>
    <display-name>Dynamisk - fleksible kolonner</display-name>
    <description>Responsive flexbox-kolonner</description>
    <form>
        <input type="Long" name="numCols">
            <label>Antall kolonner ved full skjermbredde</label>
            <default>3</default>
            <config>
                <min>1</min>
                <max>4</max>
            </config>
        </input>
        <input type="ComboBox" name="bgColor">
            <label>Bakgrunnsfarge</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <option value="#ffffff">Hvit</option>
                <option value="#f1f1f1">Gr√•</option>
            </config>
        </input>
        <input type="CheckBox" name="bgFullWidth">
            <label>Bakgrunnsfarge for hele skjermbredden</label>
        </input>
    </form>
    <regions>
        <region name="flexcols"/>
    </regions>
</layout>
