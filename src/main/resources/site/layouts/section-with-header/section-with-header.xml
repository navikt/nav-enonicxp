<layout>
    <display-name>Innholdsseksjon</display-name>
    <description>Seksjon med header og en kolonne</description>
    <form>
        <field-set>
            <label>Header (H2)</label>
            <items>
                <input type="TextLine" name="title">
                    <label>Tittel</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="TextLine" name="anchorId">
                    <label>Anker-id</label>
                    <help-text>
                        Sett et anker-id for å kunne lenke til denne delen av siden
                        Eks: https://www.nav.no/no/min-side#mitt-anker
                        Dette feltet benyttes også av komponenten for intern-navigasjon på siden
                    </help-text>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <regexp>^[0-9a-zA-Z-_]+$</regexp>
                    </config>
                </input>
            </items>
        </field-set>
        <input name="icon" type="ImageSelector">
            <label>Ikon</label>
            <config>
                <allowPath>${site}/nav.no-ressurser/bilder/svg-ikoner</allowPath>
                <allowPath>${site}/nav.no-ressurser/bilder/ikoner</allowPath>
                <allowPath>./*</allowPath>
            </config>
        </input>
        <input type="TextLine" name="backgroundColor">
            <label>Bakgrunnsfarge (6-siffer hex-kode, eks. #2f0055)</label>
            <config>
                <max-length>7</max-length>
                <regexp>^(#[0-9a-fA-F]{6}|)$</regexp>
            </config>
        </input>
        <item-set name="border">
            <label>Omriss</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <input type="TextLine" name="color">
                    <label>Farge (6-siffer hex-kode, eks. #2f0055)</label>
                    <config>
                        <max-length>7</max-length>
                        <regexp>^(#[0-9a-fA-F]{6}|)$</regexp>
                        <default>#ffffff</default>
                    </config>
                </input>
                <input type="CheckBox" name="rounded">
                    <label>Avrundede hjørner</label>
                    <config>
                        <default>unchecked</default>
                    </config>
                </input>
                <input type="Long" name="width">
                    <label>Tykkelse (px)</label>
                    <default>3</default>
                    <config>
                        <min>0</min>
                        <max>8</max>
                    </config>
                </input>
            </items>
        </item-set>
    </form>
    <regions>
        <region name="content"/>
    </regions>
</layout>
