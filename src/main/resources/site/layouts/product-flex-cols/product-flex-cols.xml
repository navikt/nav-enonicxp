<layout>
    <display-name>Fleksibelt kolonne-layout for produktsider</display-name>
    <description>Fleksibel kolonne-layout for produktsider</description>
    <form>
        <mixin name="header-with-anchor"/>
        <input type="RadioButton" name="usageContext">
            <label>Bruksområde</label>
            <help-text>
                Bruksområdet du velger vil bestemme farger, avstander etc.
            </help-text>
            <config>
                <option value="contact-channels">Kontaktkanaler</option>
                <option value="other">Annet</option>
            </config>
            <default>contact-channels</default>
        </input>
    </form>
    <config>
        <allow-on-content-type>${app}:content-page-with-sidemenus</allow-on-content-type>
    </config>
    <regions>
        <region name="flexcols"/>
    </regions>
</layout>
