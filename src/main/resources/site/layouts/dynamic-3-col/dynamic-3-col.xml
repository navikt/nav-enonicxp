<layout>
    <display-name>Fast kolonne-layout - 3 kolonner</display-name>
    <description>Tre faste kolonner med valgfri bredde-fordeling</description>
    <form>
        <input type="TextArea" name="distribution">
            <label>Bredde-fordeling</label>
            <default>33-33-33</default>
        </input>
        <mixin name="layouts-common"/>
    </form>
    <regions>
        <region name="dynamic-1"/>
        <region name="dynamic-2"/>
        <region name="dynamic-3"/>
    </regions>
</layout>
