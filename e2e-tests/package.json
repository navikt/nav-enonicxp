{
    "name": "navno-enonicxp-tests",
    "version": "1.0.0",
    "scripts": {
        "build-test-assets": "npm-run-all build-test-data-app copy-jars build-xp-image",
        "build-test-data-app": "../gradlew build -p=.xp-test-data-app",
        "copy-jars": "cp ../build/libs/navno.jar .xp-image && cp ./.xp-test-data-app/build/libs/navno-testdata.jar .xp-image",
        "build-xp-image": "docker buildx build .xp-image -t navno_tests",
        "test": "npm run build-test-assets && NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --no-warnings\" jest"
    },
    "type": "module",
    "devDependencies": {
        "@enonic/cli": "3.1.1",
        "@types/jest": "29.5.13",
        "npm-run-all": "4.1.5",
        "jest": "29.7.0",
        "testcontainers": "10.13.1",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "typescript": "5.4.2"
    }
}
